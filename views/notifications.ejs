<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>AK Cell - Notifications</title>
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <style>
    @media (max-width: 576px) {
      .notification-box {
        font-size: 1.1rem;
        padding: 1.2rem;
      }
      h2 {
        font-size: 1.6rem;
      }
    }
  </style>
</head>
<body class="bg-light">

  <%- include('partials/header') %>

  <div class="container mt-4 px-3" style="max-width: 700px;">
    <h2 class="mb-4 fs-4 d-flex align-items-center gap-2 text-dark">
      <i class="bi bi-bell-fill fs-3 text-warning"></i> Your Notifications
    </h2>

    <% if (notifications.length === 0) { %>
      <div class="alert alert-info fs-5 py-3 px-4 text-center notification-box">
        You don't have any notifications yet.
      </div>
    <% } else { %>
      <ul class="list-group">
        <% notifications.forEach(notification => { 
             const timestamp = new Date(notification.created_at);
             const formattedDate = isNaN(timestamp) 
                 ? 'Unknown date' 
                 : timestamp.toLocaleString('en-US');
        %>
          <li class="list-group-item d-flex justify-content-between align-items-center py-3 px-4 fs-6 notification-box">
            <span><%= notification.message %></span>
            <small class="text-muted"><%= formattedDate %></small>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <div class="mt-4 text-end">
      <a href="/" class="btn btn-outline-secondary d-inline-flex align-items-center gap-2">
        <i class="bi bi-arrow-left"></i> Back to Home
      </a>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
