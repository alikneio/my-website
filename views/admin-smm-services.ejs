<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin – SMM Services</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="d-flex" style="min-height:100vh;">
    <%- include('partials/admin-sidebar') %>

    <div class="flex-grow-1 d-flex flex-column">
      <header class="bg-white border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
        <h1 class="h4 m-0">
          <i class="bi bi-instagram"></i> SMM Services
        </h1>
        <% if (user) { %>
          <div class="small text-muted">
            Logged in as <strong><%= user.username || user.email %></strong>
          </div>
        <% } %>
      </header>

      <main class="flex-grow-1 p-4">

        <!-- Filters -->
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <form class="row g-3 align-items-end" method="GET" action="/admin/smm-services">
              <div class="col-md-4">
                <label class="form-label">Search</label>
                <input
                  type="text"
                  name="q"
                  class="form-control"
                  placeholder="Name, provider category or provider ID"
                  value="<%= filters.q %>">
              </div>

              <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="category_id" class="form-select">
                  <option value="all" <%= filters.category_id === 'all' ? 'selected' : '' %>>All</option>
                  <% categories.forEach(function(c){ %>
                    <option
                      value="<%= c.id %>"
                      <%= String(filters.category_id) === String(c.id) ? 'selected' : '' %>>
                      <%= c.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                  <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
                  <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="disabled" <%= filters.status === 'disabled' ? 'selected' : '' %>>Disabled</option>
                </select>
              </div>

              <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                  <i class="bi bi-funnel"></i> Apply
                </button>
                <a href="/admin/smm-services" class="btn btn-outline-secondary">
                  Reset
                </a>
                <a href="/admin/smm/sync" class="btn btn-outline-info">
                  <i class="bi bi-arrow-repeat"></i>
                  Sync from Provider
                </a>
              </div>
            </form>
            <div class="small text-muted mt-2">
              Showing up to 200 latest services. Use filters لتخفيف العدد.
            </div>
          </div>
        </div>

        <!-- Services table -->
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                  <tr>
                    <th style="width:70px;">ID</th>
                    <th>Name</th>
                    <th style="width:180px;">Category</th>
                    <th style="width:120px;">Rate / 1000</th>
                    <th style="width:140px;">Min / Max</th>
                    <th style="width:90px;">Status</th>
                    <th style="width:260px;">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!services || !services.length) { %>
                    <tr>
                      <td colspan="7" class="text-center text-muted py-4">
                        No services found. Try different filters or sync from provider.
                      </td>
                    </tr>
                  <% } else { %>
                    <% services.forEach(function(s){ %>
                      <tr>
                        <td>#<%= s.id %><br>
                          <span class="text-muted small">Prov: <%= s.provider_service_id %></span>
                        </td>

                        <td>
                          <form
                            action="/admin/smm-services/<%= s.id %>/update"
                            method="POST"
                            class="row g-1 align-items-center">
                            <div class="col-12">
                              <input
                                type="text"
                                name="name"
                                class="form-control form-control-sm fw-semibold"
                                value="<%= s.name %>">
                              <div class="small text-muted mt-1">
                                Provider cat: <%= s.category || '—' %>
                              </div>
                            </div>
                        </td>

                        <td>
                          <select
                            name="smm_category_id"
                            class="form-select form-select-sm">
                            <option value="null">— none —</option>
                            <% categories.forEach(function(c){ %>
                              <option
                                value="<%= c.id %>"
                                <%= s.smm_category_id === c.id ? 'selected' : '' %>>
                                <%= c.name %>
                              </option>
                            <% }) %>
                          </select>
                        </td>

                        <td>
                          <input
                            type="number"
                            step="0.0001"
                            name="rate"
                            class="form-control form-control-sm text-end"
                            value="<%= Number(s.rate || 0).toFixed(4) %>">
                        </td>

                        <td>
                          <div class="d-flex gap-1">
                            <input
                              type="number"
                              name="min_qty"
                              class="form-control form-control-sm text-end"
                              placeholder="Min"
                              value="<%= s.min_qty || 0 %>">
                            <input
                              type="number"
                              name="max_qty"
                              class="form-control form-control-sm text-end"
                              placeholder="Max"
                              value="<%= s.max_qty || 0 %>">
                          </div>
                        </td>

                        <td>
                          <% if (s.is_active) { %>
                            <span class="badge bg-success">Active</span>
                          <% } else { %>
                            <span class="badge bg-secondary">Disabled</span>
                          <% } %>
                        </td>

                        <td>
                          <div class="d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                              <i class="bi bi-save"></i> Save
                            </button>
                          </form>

                          <form action="/admin/smm-services/<%= s.id %>/toggle" method="POST">
                            <button
                              type="submit"
                              class="btn btn-sm <%= s.is_active ? 'btn-outline-warning' : 'btn-outline-success' %>">
                              <% if (s.is_active) { %>
                                <i class="bi bi-eye-slash"></i> Disable
                              <% } else { %>
                                <i class="bi bi-eye"></i> Enable
                              <% } %>
                            </button>
                          </form>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
