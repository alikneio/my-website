<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const swiper = new Swiper(".mySwiper", {
      loop: true,
      autoplay: { delay: 3000, disableOnInteraction: false },
      pagination: { el: ".swiper-pagination", clickable: true },
    });
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toastEl = document.querySelector('#telegram-toast .toast');
    if (toastEl) {
      const toast = new bootstrap.Toast(toastEl, { delay: 8000, autohide: true });
      toast.show();
    }
  });
</script>

<!-- COMMUNITY POPUP LOGIC -->
<script>
(function () {
  const key = "akcell_seen_community_popup";
  if (localStorage.getItem(key) === "1") return;

  const modalEl = document.getElementById("communityModal");
  if (!modalEl) return;

  const modal = new bootstrap.Modal(modalEl);

  setTimeout(() => { modal.show(); }, 1500);

  modalEl.addEventListener("hidden.bs.modal", () => {
    localStorage.setItem(key, "1");
  });

  const joinBtn = document.getElementById("communityJoinBtn");
  joinBtn.addEventListener("click", () => {
    localStorage.setItem(key, "1");
  });
})();
</script>

<script src="/main.js"></script>
