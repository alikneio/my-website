<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Order - <%= service.name %></title>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-4">
    <div class="row g-3">
      <!-- ================= LEFT: SERVICE + FORM ================= -->
      <div class="col-lg-7">
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <h3 class="card-title mb-2"><%= service.name %></h3>
            <p class="text-muted small mb-3">
              Category:
              <strong><%= service.category || 'Social Media' %></strong>
            </p>

            <div class="row text-center mb-3">
              <div class="col-4">
                <div class="small text-muted">Rate / 1000</div>
                <div class="fw-bold">$<%= Number(service.rate || 0).toFixed(4) %></div>
              </div>
              <div class="col-4">
                <div class="small text-muted">Min</div>
                <div class="fw-bold"><%= service.min_qty %></div>
              </div>
              <div class="col-4">
                <div class="small text-muted">Max</div>
                <div class="fw-bold"><%= service.max_qty %></div>
              </div>
            </div>

            <hr>

            <!-- ============ ORDER FORM ============ -->
            <form
              id="socialOrderForm"
              action="/buy-social"
              method="POST"
            >
              <!-- مهم: نفس الأسماء اللي السيرفر بيقراها -->
              <input type="hidden" name="service_id" value="<%= service.id %>">
              <input type="hidden" name="idempotency_key" value="<%= typeof idemKey !== 'undefined' ? idemKey : '' %>">

              <div class="mb-3">
                <label class="form-label">Link (URL or username)</label>
                <input
                  type="text"
                  name="link"
                  id="orderLink"
                  class="form-control"
                  placeholder="Paste the profile / post / video link here"
                  required
                >
              </div>

              <div class="mb-3">
                <label class="form-label">
                  Quantity
                  <span class="text-muted small">
                    (Min <%= service.min_qty %>, Max <%= service.max_qty %>)
                  </span>
                </label>
                <input
                  type="number"
                  class="form-control"
                  name="quantity"
                  id="orderQty"
                  min="<%= service.min_qty %>"
                  max="<%= service.max_qty %>"
                  required
                >
              </div>

              <div class="alert alert-secondary d-flex justify-content-between align-items-center">
                <div>
                  <div class="small text-muted mb-1">Estimated price</div>
                  <div class="fw-bold" id="pricePreview">$0.00</div>
                  <div class="small text-muted">
                    Rate: $<%= Number(service.rate || 0).toFixed(4) %> / 1000
                  </div>
                </div>
                <% if (user) { %>
                  <div class="text-end">
                    <div class="small text-muted">Your balance</div>
                    <div class="fw-bold">$<%= Number(user.balance || 0).toFixed(2) %></div>
                  </div>
                <% } %>
              </div>

              <div id="orderError" class="alert alert-danger d-none"></div>

              <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                Confirm Order
              </button>
            </form>
          </div>
        </div>

        <a href="/social-media" class="btn btn-link">
          <i class="bi bi-arrow-left"></i> Back to categories
        </a>
      </div>

      <!-- ================= RIGHT: NOTES ================= -->
      <div class="col-lg-5">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Important notes</h5>
            <ul class="small text-muted mb-0">
              <li>Make sure the link is correct and public (not private).</li>
              <li>Do not change username / link until the order is fully completed.</li>
              <li>Delivery time depends on the speed of the provider.</li>
              <li>Quantity must be between the allowed min and max.</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    (function () {
      const rate   = Number(<%= JSON.stringify(Number(service.rate || 0)) %>);
      const minQty = Number(<%= JSON.stringify(Number(service.min_qty || 0)) %>);
      const maxQty = Number(<%= JSON.stringify(Number(service.max_qty || 0)) %>);

      const qtyInput = document.getElementById("orderQty");
      const priceEl  = document.getElementById("pricePreview");
      const form     = document.getElementById("socialOrderForm");
      const errBox   = document.getElementById("orderError");

      function updatePrice() {
        const q = Number(qtyInput.value || 0);
        if (!q || q < minQty || q > maxQty) {
          priceEl.textContent = "$0.00";
          return;
        }
        const price = (rate * q) / 1000;
        priceEl.textContent = "$" + price.toFixed(2);
      }

      qtyInput.addEventListener("input", updatePrice);

      // تحقق بسيط قبل الإرسال (السبميت نفسه يروح للسيرفر)
      form.addEventListener("submit", function (e) {
        errBox.classList.add("d-none");
        errBox.textContent = "";

        const link = document.getElementById("orderLink").value.trim();
        const q    = Number(qtyInput.value || 0);

        if (!link || !q) {
          e.preventDefault();
          errBox.textContent = "Please fill all required fields.";
          errBox.classList.remove("d-none");
          return;
        }

        if (q < minQty || q > maxQty) {
          e.preventDefault();
          errBox.textContent = "Quantity must be between " + minQty + " and " + maxQty + ".";
          errBox.classList.remove("d-none");
          return;
        }
      });

      // أول تحميل
      updatePrice();
    })();
  </script>

  <script src="/main.js"></script>
</body>
</html>
