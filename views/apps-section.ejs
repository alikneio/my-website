<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Accounts - AK Cell</title>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

  <%- include('partials/header') %>

  <div class="hero-section">
    <h1 class="display-4">Accounts Services</h1>
    <p class="lead col-lg-8 mx-auto">
      All available accounts and subscriptions in one place.
    </p>
  </div>

  <div class="container my-5 py-5">
    <h2 class="text-center section-title">Select a Service</h2>

    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% if (categories && categories.length) { %>
        <% categories.forEach(c => { %>
          <div class="col">
            <a href="/apps/<%= c.slug %>" class="category-card d-block text-decoration-none h-100">
              <div class="card shadow-sm h-100 border-0 rounded-4 overflow-hidden text-center">
                <div class="p-3">
                  <img
                    src="<%= c.image_url || '/images/default-category.png' %>"
                    class="card-img img-fluid rounded-3"
                    alt="<%= c.label %>"
                    onerror="this.src='/images/default-category.png'">
                </div>
                <div class="card-body">
                  <div class="fw-semibold text-dark"><%= c.label %></div>
                  <% if (typeof c.products_count !== 'undefined') { %>
                    <div class="text-muted small"><%= c.products_count %> item(s)</div>
                  <% } %>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center text-muted py-5">
          No services available yet.
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
