<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Apps - AK Cell</title>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    .cat-card{transition:.2s; border:0}
    .cat-card:hover{transform:translateY(-2px)}
    .cat-img{height:120px; object-fit:contain}
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <h1 class="text-center mb-4">Apps Categories</h1>

    <% if (!categories || categories.length === 0) { %>
      <p class="text-center text-muted">No categories to show.</p>
    <% } else { %>
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
        <% categories.forEach(c => { %>
          <div class="col">
            <a href="/apps/<%= c.slug %>" class="text-decoration-none">
              <div class="card cat-card shadow-sm text-center p-3 h-100">
                <img src="<%= c.image_url || '/images/default-category.png' %>" alt="<%= c.label %>" class="cat-img mb-2">
                <div class="fw-semibold text-dark"><%= c.label %></div>
                <small class="text-muted"><%= c.products_count %> products</small>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
