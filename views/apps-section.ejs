<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Apps - AK Cell</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

  <%- include('partials/header') %>

  <!-- هيرو مثل صفحة Accounts -->
  <div class="hero-section">
    <h1 class="display-4">Apps Services</h1>
    <p class="lead col-lg-8 mx-auto">All available app services in one place.</p>
  </div>

  <!-- Search نفس ستايلك -->
  <div class="container my-5">
    <div class="search-bar-container">
      <form id="searchForm" role="search">
        <input type="search" id="searchInput" class="search-input" placeholder="Search for any service...">
        <button type="submit" class="search-btn"><i class="bi bi-search"></i></button>
      </form>
    </div>
  </div>

  <div class="container my-5 py-4">
    <h2 class="text-center section-title">Select a Service</h2>

    <% if (!categories || categories.length === 0) { %>
      <p class="text-center text-muted">No categories to show.</p>
    <% } else { %>
      <!-- Grid مرن -->
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-4">
        <% categories.forEach(c => { %>
          <div class="col" data-cat="<%= (c.label || '').toLowerCase() %>">
            <a href="/apps/<%= c.slug %>" class="text-decoration-none d-block h-100 category-card service-card">
              <!-- صورة مربّعة غير مضغوطة (نفس فكرة المنتجات/Netflix) -->
              <div class="product-image-wrapper mb-2 position-relative"><!-- بدون p-2 -->
                <img
                  src="<%= c.image_url || '/images/webp/default-category.webp' %>"
                  alt="<%= c.label %>"
                  class="product-image rounded-3"
                >
              </div>

              <!-- العنوان والعداد بنفس روح Accounts -->
              <div class="card-body fw-semibold text-dark text-center"><%= c.label %></div>
              <div class="text-center">
                <small class="text-muted"><i class="bi bi-boxes me-1"></i><%= c.products_count %> products</small>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // فلترة بالسيرش (مثل Accounts)
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("searchForm");
      const input = document.getElementById("searchInput");
      if (form) form.addEventListener("submit", e => e.preventDefault());
      if (!input) return;

      input.addEventListener("input", function () {
        const q = this.value.toLowerCase().trim();
        document.querySelectorAll("[data-cat]").forEach(col => {
          const show = q === "" || col.dataset.cat.includes(q);
          col.style.display = show ? "" : "none";
        });
      });
    });
  </script>
</body>
</html>
