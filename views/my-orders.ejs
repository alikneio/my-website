<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Orders - AK Cell</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --bg:#0d1117; --card:#121826; --muted:#9aa4b2; --br:14px; --bd:rgba(255,255,255,.12);
    }
    body{ background:var(--bg); color:#e6edf3; font-family:"Cairo",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif; }
    .page-title{ font-weight:700; }
    .filters{ background:var(--card); border:1px solid var(--bd); border-radius:20px; padding:16px; }
    .filters .form-control,.filters .form-select{ background:#0f1522; border-color:var(--bd); color:#e6edf3; }
    .chip{ border:1px solid var(--bd); border-radius:999px; padding:8px 12px; display:inline-flex; gap:6px; align-items:center; text-decoration:none; color:#e6edf3; }
    .chip.active{ background:#122235; border-color:#1b73e8; }
    .order-card{ background:var(--card); border:1px solid var(--bd); border-radius:var(--br); padding:16px; }
    .muted{ color:var(--muted); }
    .badge-accepted{ background:rgba(34,227,164,.18); color:#a8f1da; border:1px solid rgba(34,227,164,.4); }
    .badge-rejected{ background:rgba(255,75,95,.18); color:#ffbdc6; border:1px solid rgba(255,75,95,.4); }
    .badge-waiting{ background:rgba(255,193,7,.2); color:#ffe6a6; border:1px solid rgba(255,193,7,.45); }
    .total-box{ background:#0f1522; border:1px solid var(--bd); border-radius:12px; padding:10px 12px; display:inline-flex; gap:8px; align-items:center; }
    a.order-link{ text-decoration:none; color:inherit; display:block; }
  </style>
</head>
<body>

  <%- include('partials/header') %>

  <div class="container my-4 my-md-5">

    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
      <h1 class="page-title m-0">My Order History</h1>
      <div class="total-box">
        <i class="bi bi-cash-coin"></i>
        <span>Total: <strong>$<%= (typeof totalAmount!=='undefined' ? Number(totalAmount).toFixed(2) : '0.00') %></strong></span>
      </div>
    </div>

    <!-- Filters -->
    <form class="filters mb-3" method="GET" action="/my-orders">
      <div class="row g-2 align-items-end">
        <div class="col-12 col-md-3">
          <label class="form-label">From</label>
          <input type="date" class="form-control" name="from" value="<%= query?.from || '' %>">
        </div>
        <div class="col-12 col-md-3">
          <label class="form-label">To</label>
          <input type="date" class="form-control" name="to" value="<%= query?.to || '' %>">
        </div>
        <div class="col-12 col-md-3">
          <label class="form-label">Search</label>
          <input type="text" class="form-control" name="q" placeholder="Product / Order ID / Details" value="<%= query?.q || '' %>">
        </div>
        <div class="col-12 col-md-2">
          <label class="form-label">Status</label>
          <select class="form-select" name="status">
            <option value="">All</option>
            <option value="Accepted" <%= query?.status==='Accepted'?'selected':'' %>>Accepted</option>
            <option value="Waiting"  <%= query?.status==='Waiting' ?'selected':'' %>>Waiting</option>
            <option value="Rejected" <%= query?.status==='Rejected'?'selected':'' %>>Rejected</option>
          </select>
        </div>
        <div class="col-12 col-md-1 d-grid">
          <button class="btn btn-light fw-bold" type="submit"><i class="bi bi-search"></i></button>
        </div>
      </div>

      <!-- Quick status chips -->
      <div class="d-flex gap-2 mt-3 flex-wrap">
        <% const counts = statusCounts || {all: (orders?.length||0), accepted:0, waiting:0, rejected:0}; %>
        <a class="chip <%= !query?.status ? 'active' : '' %>" href="/my-orders?<%= new URLSearchParams({...query, status:'', page:1}).toString() %>">All <span class="badge bg-transparent border ms-1"><%= counts.all %></span></a>
        <a class="chip <%= query?.status==='Accepted' ? 'active' : '' %>" href="/my-orders?<%= new URLSearchParams({...query, status:'Accepted', page:1}).toString() %>"><i class="bi bi-check-circle-fill"></i> Accepted <span class="badge bg-transparent border ms-1"><%= counts.accepted||0 %></span></a>
        <a class="chip <%= query?.status==='Waiting' ? 'active' : '' %>" href="/my-orders?<%= new URLSearchParams({...query, status:'Waiting', page:1}).toString() %>"><i class="bi bi-hourglass-split"></i> Waiting <span class="badge bg-transparent border ms-1"><%= counts.waiting||0 %></span></a>
        <a class="chip <%= query?.status==='Rejected' ? 'active' : '' %>" href="/my-orders?<%= new URLSearchParams({...query, status:'Rejected', page:1}).toString() %>"><i class="bi bi-x-circle-fill"></i> Rejected <span class="badge bg-transparent border ms-1"><%= counts.rejected||0 %></span></a>
      </div>
    </form>

    <!-- Results -->
    <% if (orders && orders.length > 0) { %>
      <div class="vstack gap-2">
        <% orders.forEach(order => { %>
          <a class="order-link" href="/order-details/<%= order.id %>">
            <div class="order-card">
              <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                <div>
                  <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-receipt"></i>
                    <h5 class="m-0"><%= order.productName %></h5>
                    <span class="muted">#<%= order.id %></span>
                  </div>
                  <div class="muted mt-1">
                    <i class="bi bi-calendar3"></i>
                    <%= new Date(order.purchaseDate).toLocaleString('en-US', { year:'numeric', month:'2-digit', day:'2-digit' }) %>
                    &middot;
                    <i class="bi bi-cash-coin"></i> $<%= Number(order.price).toFixed(2) %>
                  </div>
                </div>

                <div class="text-end">
                  <% if (order.status === 'Accepted') { %>
                    <span class="badge badge-accepted px-3 py-2">Accepted</span>
                  <% } else if (order.status === 'Rejected') { %>
                    <span class="badge badge-rejected px-3 py-2">Rejected</span>
                  <% } else { %>
                    <span class="badge badge-waiting px-3 py-2">Waiting</span>
                  <% } %>
                </div>
              </div>

              <% if (order.order_details) { %>
                <div class="mt-2 small muted">
                  <i class="bi bi-card-text"></i>
                  <%= order.order_details %>
                </div>
              <% } %>
            </div>
          </a>
        <% }) %>
      </div>

      <!-- Pagination -->
      <% if (pagination && pagination.totalPages > 1) { %>
        <nav class="mt-3">
          <ul class="pagination">
            <% const u = new URLSearchParams(query); %>
            <li class="page-item <%= pagination.page<=1?'disabled':'' %>">
              <% u.set('page', Math.max(1, pagination.page-1)); %>
              <a class="page-link" href="/my-orders?<%= u.toString() %>">Prev</a>
            </li>
            <li class="page-item disabled"><span class="page-link">
              Page <%= pagination.page %> / <%= pagination.totalPages %>
            </span></li>
            <li class="page-item <%= pagination.page>=pagination.totalPages?'disabled':'' %>">
              <% u.set('page', Math.min(pagination.totalPages, pagination.page+1)); %>
              <a class="page-link" href="/my-orders?<%= u.toString() %>">Next</a>
            </li>
          </ul>
        </nav>
      <% } %>

    <% } else { %>
      <p class="text-center text-muted fs-5">No orders found for this filter.</p>
    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
