<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - AK Cell</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

    <%- include('partials/header') %>

    <div class="container my-5">
        <h1 class="mb-4">My Order History</h1>

        <% if (orders && orders.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Details</th> <th scope="col">Price</th>
                            <th scope="col">Date of Purchase</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((order, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= order.productName %></td>
                                <td>
                                    <% if (order.order_details) { %>
                                        <%= order.order_details %>
                                    <% } %>
                                </td>
                                <td>$<%= order.price.toFixed(2) %></td>
                                <td><%= new Date(order.purchaseDate).toLocaleString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-center text-muted fs-4">You have not made any purchases yet.</p>
        <% } %>
    </div>

       <footer class="bg-dark text-white text-center p-4 mt-5">
      <div class="container">
        <p>&copy; 2025 AK Cell. All Rights Reserved.</p>
        <p>
          <a href="#" class="text-white">Facebook</a> | 
          <a href="#" class="text-white">Instagram</a> | 
          <a href="#" class="text-white">WhatsApp</a>
        </p>
      </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
</body>
</html>