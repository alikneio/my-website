<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Checkout - <%= product.name %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    body { background: #f8f9fa; font-family: 'Segoe UI', sans-serif; }
    .checkout-card {
      background: #fff; border-radius: 16px; max-width: 600px;
      box-shadow: 0 0 20px rgba(0,0,0,0.08); margin: 0 auto;
    }
    @media (max-width: 576px) {
      .checkout-card { width: 100% !important; padding-left: 12px; padding-right: 12px; }
    }
  </style>
</head>
<body>

<%- include('partials/header') %>

<div class="container py-5">
  <div class="checkout-card mx-auto px-4 px-md-5 py-4">

    <div class="text-center mb-4">
      <% if (product.image) { %>
        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid mb-3" style="max-height: 100px;">
      <% } %>

      <h4 class="fw-bold mb-1"><%= product.custom_name || product.name %></h4>

      <%
        const finalPrice = Number(product.price || product.custom_price || 0);
        const originalPrice = Number(
          product.original_price ||
          product.original_unit_price ||
          product.custom_price ||
          0
        );
        const disc = Number(product.effective_discount || effectiveDiscount || 0);

        const hasDiscount =
          disc > 0 &&
          Number.isFinite(finalPrice) && finalPrice > 0 &&
          Number.isFinite(originalPrice) && originalPrice > 0 &&
          finalPrice < originalPrice;
      %>

      <div class="d-flex flex-column align-items-center">
        <% if (hasDiscount) { %>
          <div class="text-muted small">
            <span class="text-decoration-line-through">$<%= originalPrice.toFixed(2) %></span>
            <span class="badge bg-success ms-2"><%= disc.toFixed(0) %>% OFF</span>
          </div>
        <% } %>

        <p class="text-success fs-5 mb-0">
          $<%= Number.isFinite(finalPrice) ? finalPrice.toFixed(2) : '0.00' %>
        </p>
      </div>

      <div class="small text-muted mt-1">
        Balance: $<%= (user ? Number(user.balance || 0).toFixed(2) : '0.00') %>
      </div>
    </div>

    <!-- Hidden fields -->
    <input type="hidden" id="productId" value="<%= product.id %>">
    <input type="hidden" id="idemKey" value="<%= idemKey %>">

    <% const finalMsg = typeof msg !== 'undefined' ? msg : ''; %>
    <% const safeError = typeof error !== 'undefined' ? error : ''; %>
    <% if (safeError || finalMsg) {
      let alertMsg = '';
      switch (safeError) {
        case 'balance': alertMsg = '❌ Insufficient balance to complete the order.'; break;
        case 'notfound': alertMsg = '❌ Product not found or is disabled.'; break;
        case 'failed':
        case 'order_failed': alertMsg = '❌ Failed to place your order. Please try again.'; break;
        case 'missing_player': alertMsg = '❌ Player ID is required for this product.'; break;
        case 'verify': alertMsg = `❌ ${decodeURIComponent(finalMsg || 'Player ID verification failed.')}`; break;
        case 'network': alertMsg = '❌ Network issue. Please try again shortly.'; break;
        case 'server':
        default: alertMsg = '❌ An unexpected server error occurred.'; break;
      }
    %>
      <div class="alert alert-danger small text-center my-2"><%= alertMsg %></div>
    <% } %>

    <%
      const _canVerify = (typeof canVerify !== 'undefined') ? !!canVerify : true;
      const _minCostRaw = (typeof minCost !== 'undefined') ? Number(minCost) : Number(product.price || product.custom_price || 0);
      const _minCost = isNaN(_minCostRaw) ? 0 : _minCostRaw;
    %>

    <% if (product.requires_verification) { %>
      <div class="mb-3">
        <label class="form-label fw-semibold">Player ID</label>
        <div class="row g-2">
          <div class="col-12 col-md-9">
            <input type="text" class="form-control form-control-lg" id="playerIdInput" placeholder="Enter Player ID" required>
          </div>
          <div class="col-12 col-md-3 d-grid">
            <button
              type="button"
              id="btnVerify"
              class="btn btn-outline-primary btn-lg"
              <%= _canVerify ? '' : 'disabled' %>
              title="<%= _canVerify ? '' : ('Requires balance ≥ $' + Number(_minCost).toFixed(2)) %>">
              Verify
            </button>
          </div>
        </div>
        <div id="verifyResult" class="mt-2 small text-muted"></div>
      </div>
    <% } else if (product.requires_player_id) { %>
      <div class="mb-3">
        <label class="form-label fw-semibold">Player ID</label>
        <input type="text" class="form-control form-control-lg" id="playerIdInput" placeholder="Enter Player ID">
      </div>
    <% } %>

    <button id="buyBtn" class="btn btn-success w-100 btn-lg mt-3">Buy Now</button>
    <div id="submitResult" class="mt-3 small text-center"></div>

    <div id="productData"
         data-product-id="<%= product.id %>"
         data-requires-verification="<%= product.requires_verification ? '1' : '0' %>"
         data-can-verify="<%= _canVerify ? '1' : '0' %>"
         data-min-cost="<%= Number(_minCost).toFixed(2) %>">
    </div>

  </div>
</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  let verifying = false;
  let submitting = false;

  function setBtnLoading(btn, state, label) {
    if (!btn) return;
    btn.disabled = state;
    if (state) {
      btn.dataset._old = btn.innerHTML;
      btn.innerHTML = `${label || 'Processing'} <span class="spinner-border spinner-border-sm ms-2" role="status" aria-hidden="true"></span>`;
    } else {
      if (btn.dataset._old) btn.innerHTML = btn.dataset._old;
    }
  }

  async function safeJsonFetch(url, options = {}) {
    const res = await fetch(url, {
      redirect: 'manual',
      headers: {
        'Accept': 'application/json',
        ...(options.headers || {})
      },
      ...options
    });

    if (res.status >= 300 && res.status < 400) throw new Error('REDIRECT_RESPONSE');

    const ct = (res.headers.get('content-type') || '').toLowerCase();
    if (!ct.includes('application/json')) {
      const text = await res.text().catch(() => '');
      console.error('Non-JSON response:', text);
      throw new Error('NON_JSON_RESPONSE');
    }

    const data = await res.json();
    return { res, data };
  }

  async function verifyPlayer() {
    if (verifying) return;

    const meta = document.getElementById("productData")?.dataset || {};
    const canVerify = (meta.canVerify === '1');
    const minCost = Number(meta.minCost || 0);
    const productId = meta.productId;

    const playerId = document.getElementById("playerIdInput")?.value.trim();
    const resultBox = document.getElementById("verifyResult");
    const btnVerify = document.getElementById("btnVerify");

    if (!canVerify) {
      resultBox.className = "mt-2 small text-warning";
      resultBox.textContent = `Balance too low to verify (requires ≥ $${minCost.toFixed(2)}).`;
      return;
    }

    if (!playerId) {
      resultBox.className = "mt-2 small text-danger";
      resultBox.textContent = "Please enter a Player ID first.";
      return;
    }

    verifying = true;
    setBtnLoading(btnVerify, true, 'Verifying');
    resultBox.className = "mt-2 small text-muted";
    resultBox.textContent = "Verifying...";

    try {
      const { res, data } = await safeJsonFetch('/verify-player', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ player_id: playerId, product_id: productId })
      });

      if (!res.ok || !data?.success) {
        resultBox.className = "mt-2 small text-danger";
        resultBox.textContent = data?.message || 'Invalid Player ID';
        return;
      }

      const name = data.player_name ? `: ${data.player_name}` : '';
      resultBox.className = "mt-2 small text-success";
      resultBox.textContent = `✔️ Valid${name}`;

    } catch (err) {
      console.error("Verification Error:", err);
      resultBox.className = "mt-2 small text-danger";
      resultBox.textContent =
        (err.message === 'REDIRECT_RESPONSE') ? "Server returned redirect unexpectedly."
        : (err.message === 'NON_JSON_RESPONSE') ? "Server returned non-JSON response."
        : "Failed to verify. Please try again.";
    } finally {
      verifying = false;
      setBtnLoading(btnVerify, false);
    }
  }

  async function submitOrder() {
    if (submitting) return;

    const productId = document.getElementById("productId")?.value;
    const idemKey = document.getElementById("idemKey")?.value;
    const meta = document.getElementById("productData")?.dataset || {};

    const requiresVerification = (meta.requiresVerification === '1');
    const playerIdInput = document.getElementById("playerIdInput");
    const player_id = playerIdInput ? playerIdInput.value.trim() : '';

    const resultBox = document.getElementById("submitResult");
    const buyBtn = document.getElementById("buyBtn");

    if ((requiresVerification || playerIdInput) && !player_id) {
      resultBox.innerHTML = `<div class="alert alert-danger py-2">❌ Player ID is required.</div>`;
      return;
    }

    submitting = true;
    setBtnLoading(buyBtn, true, 'Processing');
    resultBox.innerHTML = `<div class="text-muted small">⏳ Processing order...</div>`;

    try {
      const { res, data } = await safeJsonFetch('/buy-fixed-product', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ productId, player_id, idempotency_key: idemKey })
      });

      if (!res.ok || !data?.success) {
        const msg = (data?.message || 'Failed to place order').toString();
        resultBox.innerHTML = `<div class="alert alert-danger py-2">❌ ${msg.replace(/</g,'&lt;').replace(/>/g,'&gt;')}</div>`;
        return;
      }

      window.location.href = data.redirectUrl || '/processing';

    } catch (err) {
      console.error("Order Error:", err);
      const msg =
        (err.message === 'REDIRECT_RESPONSE') ? "Server returned redirect unexpectedly."
        : (err.message === 'NON_JSON_RESPONSE') ? "Server returned non-JSON response."
        : "Something went wrong.";
      resultBox.innerHTML = `<div class="alert alert-danger py-2">❌ ${msg}</div>`;
    } finally {
      submitting = false;
      setBtnLoading(buyBtn, false);
    }
  }

  // Wiring
  document.getElementById('btnVerify')?.addEventListener('click', verifyPlayer);
  document.getElementById('buyBtn')?.addEventListener('click', submitOrder);
</script>

</body>
</html>
