<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AK Cell</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
  <div id="responseToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto" id="toastTitle">Notification</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="toastBody">
      </div>
  </div>
</div>


    <%- include('partials/header') %>

    <div class="container my-5">
        <h1 class="text-center mb-4">Our Products</h1>
        
        <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col service-card">
                         <div class="category-card">
                            <img src="<%= product.image %>" class="card-img-top p-3" alt="<%= product.name %>" style="max-height: 150px; object-fit: contain;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text fs-4 fw-bold mt-auto text-primary">$<%= product.price.toFixed(2) %></p>
                                
                                <% if (user) { %>
                                    <% if (product.requires_player_id == 1) { %>
                                        <a href="/checkout/<%= product.id %>" class="btn btn-info mt-auto">Enter Details</a>
                                    <% } else { %>
                                        <form action="/buy" method="POST" class="buy-form mt-auto">
                                            <input type="hidden" name="productName" value="<%= product.name %>">
                                            <input type="hidden" name="price" value="<%= product.price %>">
                                            <button type="submit" class="btn btn-primary">Buy Now</button>
                                        </form>
                                    <% } %>
                                <% } else { %>
                                    <a href="/login.html" class="btn btn-secondary mt-auto">Login to Buy</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-muted fs-4 text-center">No products found in this category at the moment.</p>
                </div>
            <% } %>

        </div>
    </div>

    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
</body>
</html>