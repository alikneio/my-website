<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Balance - AK Cell</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --ak-primary:#0d6efd;
      --ak-ink:#0f172a;
      --ak-muted:#64748b;
      --ak-bg:#eef2f7;          /* نفس إحساس خلفية الهوم */
      --ak-card:#ffffff;
      --ak-border:rgba(15,23,42,.08);
      --ak-shadow:0 14px 35px rgba(15,23,42,.08);
      --ak-shadow-soft:0 10px 25px rgba(15,23,42,.06);
      --ak-radius:18px;

      --ak-success:#16a34a;
      --ak-warning:#f59e0b;
      --ak-danger:#ef4444;
      --ak-info:#0ea5e9;
    }

    *{ box-sizing:border-box; }
    body{
      font-family:'Cairo',system-ui,-apple-system,"Segoe UI",sans-serif;
      background: radial-gradient(circle at top, #f6f8fc 0, var(--ak-bg) 55%, #e7edf8 100%);
      color:var(--ak-ink);
      min-height:100vh;
    }

    /* Page container */
    .ak-wrap{
      max-width:1180px;
      margin: 18px auto 40px;
      padding: 0 14px;
    }

    /* Hero */
    .ak-hero{
      position:relative;
      background:
        linear-gradient(135deg, rgba(13,110,253,.10), rgba(255,255,255,.65)),
        linear-gradient(0deg, #fff, #fff);
      border: 1px solid var(--ak-border);
      border-radius: 22px;
      box-shadow: var(--ak-shadow);
      overflow:hidden;
      padding: 18px 18px;
    }
    .ak-hero::before{
      content:"";
      position:absolute;
      inset:-60px -80px auto auto;
      width: 260px;
      height: 260px;
      background: radial-gradient(circle at center, rgba(13,110,253,.22), transparent 60%);
      filter: blur(10px);
      pointer-events:none;
    }
    .ak-title{
      display:flex;
      align-items:center;
      gap:12px;
    }
    .ak-title .icon{
      width:46px;height:46px;border-radius:16px;
      display:flex;align-items:center;justify-content:center;
      background: linear-gradient(135deg, rgba(13,110,253,.18), rgba(14,165,233,.12));
      border:1px solid rgba(13,110,253,.22);
      color:var(--ak-primary);
      flex:0 0 auto;
    }
    .ak-title h2{
      margin:0;
      font-weight:800;
      letter-spacing:.2px;
      font-size: 1.35rem;
      line-height:1.1;
    }
    .ak-sub{
      margin:3px 0 0;
      color:var(--ak-muted);
      font-size:.92rem;
    }

    .ak-actions .btn{
      border-radius: 12px;
      padding: .55rem .85rem;
      box-shadow: 0 8px 20px rgba(15,23,42,.06);
    }

    /* Stat cards */
    .ak-grid{
      margin-top: 14px;
    }
    .ak-card{
      background:var(--ak-card);
      border:1px solid var(--ak-border);
      border-radius: var(--ak-radius);
      box-shadow: var(--ak-shadow-soft);
      padding: 16px;
      height:100%;
    }
    .ak-card .kicker{
      color:var(--ak-muted);
      font-size: .85rem;
      margin-bottom: 6px;
      display:flex;
      align-items:center;
      gap:8px;
    }
    .ak-value{
      font-size: 1.65rem;
      font-weight: 900;
      letter-spacing:.2px;
      margin-bottom: 6px;
    }
    .ak-mini{
      color:var(--ak-muted);
      font-size:.86rem;
    }

    .chip{
      display:inline-flex;
      align-items:center;
      gap:7px;
      padding: 6px 10px;
      border-radius: 999px;
      font-weight:800;
      font-size:.78rem;
      border:1px solid var(--ak-border);
      background:#fff;
    }
    .chip.pending{ background: rgba(245,158,11,.12); border-color: rgba(245,158,11,.25); color:#8a5b00;}
    .chip.approved{ background: rgba(22,163,74,.12); border-color: rgba(22,163,74,.25); color:#065f2f;}
    .chip.rejected{ background: rgba(239,68,68,.10); border-color: rgba(239,68,68,.25); color:#8a1f1f;}

    /* Requests section */
    .ak-section{
      margin-top: 14px;
      background: var(--ak-card);
      border:1px solid var(--ak-border);
      border-radius: 22px;
      box-shadow: var(--ak-shadow);
      overflow:hidden;
    }
    .ak-section-head{
      padding: 14px 16px;
      border-bottom:1px solid var(--ak-border);
      display:flex;
      gap:12px;
      align-items:center;
      justify-content:space-between;
      flex-wrap:wrap;
      background: linear-gradient(0deg, #fff, #fff);
    }
    .ak-section-title{
      display:flex;
      align-items:center;
      gap:10px;
      margin:0;
      font-weight:900;
      font-size:1.05rem;
    }
    .ak-tools{
      display:flex;
      gap:10px;
      align-items:center;
      flex-wrap:wrap;
      justify-content:flex-end;
    }
    .seg{
      display:flex;
      border:1px solid var(--ak-border);
      border-radius: 14px;
      overflow:hidden;
      background:#fff;
      box-shadow: 0 10px 22px rgba(15,23,42,.05);
    }
    .seg button{
      border:0;
      background:transparent;
      padding: 8px 10px;
      font-weight:800;
      font-size:.82rem;
      color: var(--ak-muted);
      display:flex;
      align-items:center;
      gap:6px;
    }
    .seg button.active{
      color: var(--ak-ink);
      background: rgba(13,110,253,.10);
    }

    .search{
      position:relative;
      min-width: 240px;
    }
    .search input{
      width:100%;
      border-radius: 14px;
      border:1px solid var(--ak-border);
      padding: 10px 12px 10px 38px;
      outline:none;
      background:#fff;
    }
    .search i{
      position:absolute;
      left:12px;
      top:50%;
      transform:translateY(-50%);
      color: var(--ak-muted);
    }

    /* Table */
    .ak-table-wrap{ padding: 0; }
    table.ak-table{
      width:100%;
      margin:0;
      border-collapse: separate;
      border-spacing: 0;
    }
    .ak-table thead th{
      position: sticky;
      top: 0;
      z-index: 1;
      background: #0f172a;
      color:#fff;
      font-weight:800;
      font-size:.85rem;
      white-space:nowrap;
    }
    .ak-table th, .ak-table td{
      padding: 12px 12px;
      border-bottom: 1px solid rgba(15,23,42,.06);
      vertical-align: middle;
      font-size:.92rem;
    }
    .ak-table tbody tr:hover{
      background: rgba(13,110,253,.03);
    }

    .badge-soft{
      font-weight:900;
      border-radius: 999px;
      padding: 6px 10px;
      font-size: .78rem;
      border:1px solid transparent;
      display:inline-flex;
      align-items:center;
      gap:7px;
    }
    .badge-soft.pending{ background: rgba(245,158,11,.12); border-color: rgba(245,158,11,.25); color:#8a5b00; }
    .badge-soft.approved{ background: rgba(22,163,74,.12); border-color: rgba(22,163,74,.25); color:#065f2f; }
    .badge-soft.rejected{ background: rgba(239,68,68,.10); border-color: rgba(239,68,68,.25); color:#8a1f1f; }

    .proof-thumb{
      width: 52px;
      height: 52px;
      object-fit: cover;
      border-radius: 12px;
      border:1px solid rgba(15,23,42,.10);
      box-shadow: 0 10px 20px rgba(15,23,42,.08);
      background:#fff;
    }

    .note-clip{
      max-width: 320px;
      color: var(--ak-muted);
      font-size: .88rem;
    }

    @media (max-width: 768px){
      .ak-value{ font-size:1.45rem; }
      .note-clip{ max-width: 220px; }
      .search{ min-width: 100%; }
      .ak-actions{ width:100%; }
      .ak-actions .btn{ width:100%; }
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <main class="ak-wrap">

    <!-- HERO -->
    <div class="ak-hero">
      <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
        <div class="ak-title">
          <div class="icon"><i class="bi bi-wallet2 fs-4"></i></div>
          <div>
            <h2>My Balance</h2>
            <div class="ak-sub">تابع رصيدك وحالة طلبات التعبئة — بأسلوب AK CELL</div>
          </div>
        </div>

        <div class="ak-actions d-flex gap-2">
          <a href="/add-balance/whish" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add Balance
          </a>
          <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-house me-1"></i> Home
          </a>
        </div>
      </div>
    </div>

    <!-- STATS -->
    <div class="row g-3 ak-grid">
      <div class="col-12 col-md-4">
        <div class="ak-card">
          <div class="kicker"><i class="bi bi-cash-coin text-success"></i> Current Balance</div>
          <div class="ak-value text-success">$<%= Number(user?.balance || 0).toFixed(2) %></div>
          <div class="ak-mini">Username: <strong class="text-dark"><%= user?.username %></strong></div>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="ak-card">
          <div class="kicker"><i class="bi bi-stars text-primary"></i> Level & Discount</div>

          <%
            const levelDiscountMap = { 1:0, 2:2, 3:4, 4:6, 5:10 };
            const lvl = Number(user?.level || 1);
            const autoDisc = (levelDiscountMap[lvl] ?? 0);
            const manualDisc = Number(user?.discount_percent || 0);
            const effectiveDisc = manualDisc > 0 ? manualDisc : autoDisc;
            const discMode = manualDisc > 0 ? 'Manual' : 'Auto';
          %>

          <div class="d-flex flex-wrap gap-2 mb-2">
            <span class="chip">
              <i class="bi bi-arrow-up-circle text-primary"></i>
              Level <%= lvl %>
            </span>
            <span class="chip approved">
              <i class="bi bi-percent"></i>
              <%= Number(effectiveDisc).toFixed(0) %>% (<%= discMode %>)
            </span>
          </div>

          <div class="ak-mini">Total spent: <strong>$<%= Number(user?.total_spent || 0).toFixed(2) %></strong></div>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="ak-card">
          <div class="kicker"><i class="bi bi-graph-up-arrow text-info"></i> Top-up Stats</div>

          <div class="d-flex flex-wrap gap-2 mb-2">
            <span class="chip pending"><i class="bi bi-hourglass-split"></i> Pending: <%= Number(stats?.byStatus?.pending || 0) %></span>
            <span class="chip approved"><i class="bi bi-check2-circle"></i> Approved: <%= Number(stats?.byStatus?.approved || 0) %></span>
            <span class="chip rejected"><i class="bi bi-x-circle"></i> Rejected: <%= Number(stats?.byStatus?.rejected || 0) %></span>
          </div>

          <div class="ak-mini">
            Total requests: <strong><%= Number(stats?.total || 0) %></strong>
            <% if (typeof stats?.approvedSum !== 'undefined') { %>
              · Approved sum: <strong>$<%= Number(stats.approvedSum || 0).toFixed(2) %></strong>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- REQUESTS -->
    <section class="ak-section mt-3">
      <div class="ak-section-head">
        <div class="ak-section-title">
          <i class="bi bi-receipt text-primary"></i>
          My Top-up Requests
          <span class="text-muted" style="font-size:.86rem;">(آخر 200 طلب)</span>
        </div>

        <div class="ak-tools">
          <div class="seg" role="tablist" aria-label="filter">
            <button type="button" class="active" data-filter="all"><i class="bi bi-grid"></i> All</button>
            <button type="button" data-filter="pending"><i class="bi bi-hourglass-split"></i> Pending</button>
            <button type="button" data-filter="approved"><i class="bi bi-check2-circle"></i> Approved</button>
            <button type="button" data-filter="rejected"><i class="bi bi-x-circle"></i> Rejected</button>
          </div>

          <div class="search">
            <i class="bi bi-search"></i>
            <input id="reqSearch" type="text" placeholder="Search amount / currency / date..." />
          </div>
        </div>
      </div>

      <div class="ak-table-wrap table-responsive">
        <table class="ak-table">
          <thead>
            <tr>
              <th style="width:60px;">#</th>
              <th>Amount</th>
              <th>Currency</th>
              <th>Status</th>
              <th>Note</th>
              <th>Proof</th>
              <th>Date</th>
            </tr>
          </thead>

          <tbody id="reqBody">
            <% if (!requests || requests.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center py-4" style="color:var(--ak-muted);">
                  ما عندك طلبات تعبئة بعد. جرّب
                  <a href="/add-balance/whish" class="fw-bold" style="color:var(--ak-primary);">Add Balance</a>.
                </td>
              </tr>
            <% } else { %>
              <% requests.forEach((r, idx) => { %>
                <tr data-status="<%= r.status %>">
                  <td><strong><%= idx + 1 %></strong></td>

                  <td class="fw-bold">
                    <%= r.amount %>
                  </td>

                  <td>
                    <span class="chip"><i class="bi bi-currency-exchange text-primary"></i> <%= r.currency %></span>
                  </td>

                  <td>
                    <% if (r.status === 'approved') { %>
                      <span class="badge-soft approved"><i class="bi bi-check2-circle"></i> Approved</span>
                    <% } else if (r.status === 'rejected') { %>
                      <span class="badge-soft rejected"><i class="bi bi-x-circle"></i> Rejected</span>
                    <% } else { %>
                      <span class="badge-soft pending"><i class="bi bi-hourglass-split"></i> Pending</span>
                    <% } %>
                  </td>

                  <td class="note-clip">
                    <%= (r.admin_note && r.admin_note.trim()) ? r.admin_note : '-' %>
                  </td>

                  <td>
                    <% if (r.proof_image) { %>
                      <a href="#" class="proof-open" data-src="/uploads/whish/<%= r.proof_image %>">
                        <img class="proof-thumb" src="/uploads/whish/<%= r.proof_image %>" alt="Proof"
                             onerror="this.style.display='none';" />
                      </a>
                    <% } else { %>
                      <span class="text-muted">N/A</span>
                    <% } %>
                  </td>

                  <td>
                    <%= new Date(r.created_at).toLocaleString() %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>

  </main>

  <!-- Proof modal -->
  <div class="modal fade" id="proofModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content" style="border-radius:18px; overflow:hidden;">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-image me-2"></i>Payment Proof</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0" style="background:#000;">
          <img id="proofModalImg" src="" alt="Proof" style="width:100%; height:auto; display:block;">
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>

  <script>
    // Filter buttons
    const seg = document.querySelectorAll('.seg button');
    const body = document.getElementById('reqBody');
    const rows = body ? Array.from(body.querySelectorAll('tr[data-status]')) : [];

    function applyFilter(filter, q) {
      const query = (q || '').trim().toLowerCase();
      rows.forEach(tr => {
        const st = tr.getAttribute('data-status');
        const text = tr.innerText.toLowerCase();

        const okFilter = (filter === 'all') ? true : (st === filter);
        const okSearch = query ? text.includes(query) : true;

        tr.style.display = (okFilter && okSearch) ? '' : 'none';
      });
    }

    let currentFilter = 'all';

    seg.forEach(btn => {
      btn.addEventListener('click', () => {
        seg.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentFilter = btn.dataset.filter || 'all';
        applyFilter(currentFilter, document.getElementById('reqSearch')?.value || '');
      });
    });

    // Search
    const search = document.getElementById('reqSearch');
    if (search) {
      search.addEventListener('input', () => applyFilter(currentFilter, search.value));
    }

    // Proof modal open
    const modal = new bootstrap.Modal(document.getElementById('proofModal'));
    const modalImg = document.getElementById('proofModalImg');

    document.addEventListener('click', (e) => {
      const a = e.target.closest('.proof-open');
      if (!a) return;
      e.preventDefault();
      const src = a.getAttribute('data-src');
      if (!src) return;
      modalImg.src = src;
      modal.show();
    });
  </script>
</body>
</html>
