<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Product: <%= product.name %></title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    body{
      background: radial-gradient(1200px 600px at 20% 10%, rgba(25,135,84,.10), transparent 60%),
                  radial-gradient(1000px 500px at 90% 20%, rgba(13,110,253,.08), transparent 55%),
                  #f6f7fb;
    }

    .page-wrap{ min-height: 72vh; }

    .page-head{
      border-radius: 18px;
      padding: 18px 18px;
      background: linear-gradient(135deg, rgba(25,135,84,.12), rgba(13,110,253,.08));
      border: 1px solid rgba(0,0,0,.06);
      box-shadow: 0 10px 26px rgba(0,0,0,.06);
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 12px;
      flex-wrap: wrap;
    }

    .title{
      margin:0;
      font-weight: 900;
      display:flex;
      align-items:center;
      gap: 10px;
      letter-spacing: .2px;
    }

    .chip{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 7px 10px;
      border-radius: 999px;
      background: rgba(0,0,0,.04);
      color: rgba(0,0,0,.72);
      font-weight: 800;
      font-size: 12px;
      white-space: nowrap;
    }

    .edit-card{
      border: 0;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 12px 35px rgba(0,0,0,.08);
      background: rgba(255,255,255,.92);
      border: 1px solid rgba(0,0,0,.06);
    }

    .edit-card .card-head{
      padding: 14px 16px;
      border-bottom: 1px solid rgba(0,0,0,.06);
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 10px;
      background: linear-gradient(135deg, rgba(13,110,253,.06), rgba(25,135,84,.08));
    }

    .section-title{
      margin: 0;
      font-weight: 900;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .form-control, .form-select{
      border-radius: 12px;
      padding: 12px 14px;
    }

    .input-group-text{
      border-radius: 12px 0 0 12px;
      border-color: rgba(0,0,0,.10);
      background: rgba(0,0,0,.03);
    }

    .input-group .form-control, .input-group .form-select{
      border-radius: 0 12px 12px 0;
    }

    textarea.form-control{
      min-height: 110px;
    }

    .helper{
      color: rgba(0,0,0,.55);
      font-size: 12px;
      margin-top: 6px;
    }

    .img-preview{
      display:flex;
      align-items:center;
      gap: 12px;
      padding: 12px;
      border-radius: 14px;
      border: 1px dashed rgba(0,0,0,.12);
      background: rgba(255,255,255,.7);
    }

    .img-preview img{
      width: 58px;
      height: 58px;
      object-fit: contain;
      border-radius: 12px;
      background: #fff;
      border: 1px solid rgba(0,0,0,.06);
      padding: 6px;
      flex: 0 0 auto;
    }

    .btn-save{
      border-radius: 14px;
      padding: 12px 14px;
      font-weight: 900;
      box-shadow: 0 10px 18px rgba(25,135,84,.18);
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }
    .btn-save:hover{
      transform: translateY(-1px);
      box-shadow: 0 14px 22px rgba(25,135,84,.22);
      filter: brightness(1.02);
    }

    .btn-soft{
      border-radius: 14px;
      padding: 10px 12px;
      font-weight: 900;
      background: rgba(0,0,0,.04);
      border: 1px solid rgba(0,0,0,.08);
    }

    .btn-stock{
      border-radius: 14px;
      padding: 10px 12px;
      font-weight: 900;
    }

    .divider{
      height: 1px;
      background: rgba(0,0,0,.06);
      margin: 14px 0;
    }

    .alert-soft{
      border-radius: 14px;
      border: 1px solid rgba(0,0,0,.06);
      background: rgba(13,110,253,.06);
    }

    .badge-pill{ border-radius: 999px; }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <div class="container my-5 page-wrap">

    <%
      const deliveryMode = (product.delivery_mode || 'manual').toString().toLowerCase();
      const isStock = (deliveryMode === 'stock');
      const stockCount = (product.stock_count !== undefined && product.stock_count !== null)
        ? Number(product.stock_count)
        : null;
      const inStock = (stockCount !== null) ? (stockCount > 0) : null;
    %>

    <!-- Header -->
    <div class="page-head mb-4">
      <div>
        <h3 class="title">
          <i class="bi bi-pencil-square"></i>
          Edit Product
        </h3>
        <div class="d-flex flex-wrap gap-2 mt-2">
          <span class="chip"><i class="bi bi-hash"></i> ID: <%= product.id %></span>
          <span class="chip"><i class="bi bi-tag-fill"></i> <%= product.main_category || 'No Main Category' %></span>
          <span class="chip"><i class="bi bi-diagram-3-fill"></i> <%= product.sub_category || 'No Sub Category' %></span>

          <% if (isStock) { %>
            <span class="chip">
              <i class="bi bi-lightning-charge-fill text-primary"></i>
              Stock (Auto)
            </span>
          <% } else { %>
            <span class="chip">
              <i class="bi bi-person-check-fill"></i>
              Manual
            </span>
          <% } %>

          <% if (isStock) { %>
            <% if (stockCount === null) { %>
              <span class="chip"><i class="bi bi-question-circle"></i> Stock: ?</span>
            <% } else if (inStock) { %>
              <span class="chip"><i class="bi bi-check2-circle text-success"></i> In stock: <%= stockCount %></span>
            <% } else { %>
              <span class="chip"><i class="bi bi-x-circle text-danger"></i> Out of stock</span>
            <% } %>
          <% } %>
        </div>
      </div>

      <div class="d-flex gap-2 flex-wrap">
        <a href="/admin/products" class="btn btn-soft">
          <i class="bi bi-arrow-left"></i> Back
        </a>

        <% if (isStock) { %>
          <a href="/admin/products/<%= product.id %>/stock" class="btn btn-info btn-stock text-dark">
            <i class="bi bi-boxes me-1"></i> Manage Stock
          </a>
        <% } %>
      </div>
    </div>

    <!-- Card -->
    <div class="card edit-card">
      <div class="card-head">
        <h6 class="section-title">
          <i class="bi bi-box-seam"></i>
          Product Information
        </h6>

        <span class="chip">
          <i class="bi bi-shield-check"></i>
          Admin Panel
        </span>
      </div>

      <div class="card-body p-4">
        <form action="/admin/products/edit/<%= product.id %>" method="POST" novalidate>

          <!-- ✅ NEW: Delivery Mode -->
          <div class="mb-3">
            <label class="form-label fw-bold">
              <i class="bi bi-truck me-1"></i>
              Delivery Mode
            </label>

            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-gear"></i></span>
              <select class="form-select" id="deliveryMode" name="delivery_mode">
                <option value="manual" <%= deliveryMode === 'manual' ? 'selected' : '' %>>Manual (Admin processes order)</option>
                <option value="stock"  <%= deliveryMode === 'stock'  ? 'selected' : '' %>>Stock (Auto delivery)</option>
              </select>
            </div>

            <div class="helper">
              Manual = مثل النظام الحالي. Stock = تسليم تلقائي إذا في مخزون، وإذا ما في → الطلب بيضل Pending ويوصل للأدمن.
            </div>

            <div id="stockHint" class="alert alert-soft mt-3 mb-0 d-none">
              <div class="d-flex gap-2">
                <i class="bi bi-info-circle-fill text-primary"></i>
                <div class="flex-grow-1">
                  <div class="fw-bold">Stock Auto Delivery enabled</div>
                  <div class="small text-muted">
                    If stock is empty, orders will stay <b>Waiting</b> and admin will fulfill manually (no rejection).
                  </div>

                  <div class="mt-2">
                    <a href="/admin/products/<%= product.id %>/stock" class="btn btn-sm btn-info text-dark btn-round">
                      <i class="bi bi-boxes me-1"></i> Open Stock Manager
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="divider"></div>

          <!-- Product Name -->
          <div class="mb-3">
            <label class="form-label fw-bold">Product Name</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-type"></i></span>
              <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
            </div>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label class="form-label fw-bold">Price</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-cash-coin"></i></span>
              <input type="number" step="0.01" class="form-control" name="price" value="<%= product.price %>" required>
            </div>
            <div class="helper">Example: 2.30</div>
          </div>

          <!-- Image URL -->
          <div class="mb-3">
            <label class="form-label fw-bold">Image URL</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-image"></i></span>
              <input id="imageInput" type="text" class="form-control" name="image" value="<%= product.image %>">
            </div>

            <div class="mt-3 img-preview">
              <img id="imagePreview" src="<%= product.image %>" alt="preview" onerror="this.src='/images/placeholder.png'">
              <div class="flex-grow-1">
                <div class="fw-bold mb-1">Preview</div>
                <div class="helper mb-0">If image doesn’t load, check the URL/path.</div>
              </div>
            </div>
          </div>

          <div class="divider"></div>

          <!-- Main Category -->
          <div class="mb-3">
            <label class="form-label fw-bold">Main Category</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-folder2-open"></i></span>
              <input type="text" class="form-control" name="main_category" value="<%= product.main_category %>">
            </div>
          </div>

          <!-- Sub Category -->
          <div class="mb-3">
            <label class="form-label fw-bold">Sub-Category</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-folder2"></i></span>
              <input type="text" class="form-control" name="sub_category" value="<%= product.sub_category %>">
            </div>
          </div>

          <!-- Sub Category Image -->
          <div class="mb-3">
            <label class="form-label fw-bold">Sub-Category Image</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-images"></i></span>
              <input type="text" class="form-control" name="sub_category_image" value="<%= product.sub_category_image %>">
            </div>
          </div>

          <div class="divider"></div>

          <!-- ✅ Product Description -->
          <div class="mb-3">
            <label for="description" class="form-label fw-bold">
              <i class="bi bi-journal-text me-1"></i>
              Product Description
            </label>
            <textarea class="form-control" id="description" name="description" rows="4"
              placeholder="Write a clear product description..."><%= product.description || '' %></textarea>
            <div class="d-flex justify-content-between">
              <div class="helper">This will appear in checkout details.</div>
              <div class="helper"><span id="descCount">0</span> chars</div>
            </div>
          </div>

          <!-- Notes -->
          <div class="mb-3">
            <label for="notes" class="form-label fw-bold">
              <i class="bi bi-pencil-square me-1"></i>
              Product Notes (Optional)
            </label>
            <textarea class="form-control" id="notes" name="notes" rows="3"
              placeholder="Any special notes (delivery, requirements, warnings)..."><%= product.notes || '' %></textarea>
            <div class="d-flex justify-content-between">
              <div class="helper">Tips: Put warnings / required info here.</div>
              <div class="helper"><span id="notesCount">0</span> chars</div>
            </div>
          </div>

          <!-- Player ID Label -->
          <div class="mb-3">
            <label for="player_id_label" class="form-label fw-bold">
              <i class="bi bi-person-vcard me-1"></i>
              Player ID Label (اختياري)
            </label>
            <input type="text" class="form-control" id="player_id_label" name="player_id_label"
              value="<%= product.player_id_label || '' %>" placeholder="مثال: Game UID / Player Tag ...">
          </div>

          <!-- Out of Stock -->
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="is_out_of_stock" name="is_out_of_stock" value="1"
              <%= Number(product.is_out_of_stock) === 1 ? 'checked' : '' %>>
            <label class="form-check-label fw-bold" for="is_out_of_stock">
              <i class="bi bi-x-circle me-1"></i>
              Out of Stock
            </label>
            <div class="helper">
              (Optional) For manual products. For stock products, prefer using stock manager instead.
            </div>
          </div>

          <!-- Requires Player ID -->
          <div class="form-check mb-4">
            <input type="checkbox" class="form-check-input" id="requiresPlayerId" name="requires_player_id" value="1"
              <%= (product.requires_player_id == 1) ? 'checked' : '' %>>
            <label class="form-check-label fw-bold" for="requiresPlayerId">
              <i class="bi bi-person-check me-1"></i>
              Requires Player ID
            </label>
          </div>

          <button type="submit" class="btn btn-success w-100 btn-save">
            <i class="bi bi-save2 me-1"></i> Save Changes
          </button>

          <p class="helper mt-3 mb-0">
            Make sure description & notes are correct — they appear to customers in checkout.
          </p>

        </form>
      </div>
    </div>

  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Image preview
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('imagePreview');

    if (imageInput && imagePreview) {
      imageInput.addEventListener('input', () => {
        const v = (imageInput.value || '').trim();
        imagePreview.src = v || '/images/placeholder.png';
      });
    }

    // Char counters
    const desc = document.getElementById('description');
    const notes = document.getElementById('notes');
    const descCount = document.getElementById('descCount');
    const notesCount = document.getElementById('notesCount');

    function setCount(el, out){
      if (!el || !out) return;
      out.textContent = (el.value || '').length;
      el.addEventListener('input', () => out.textContent = (el.value || '').length);
    }

    setCount(desc, descCount);
    setCount(notes, notesCount);

    // Stock hint show/hide
    const deliveryModeSel = document.getElementById('deliveryMode');
    const stockHint = document.getElementById('stockHint');

    function toggleStockHint(){
      if (!deliveryModeSel || !stockHint) return;
      const v = (deliveryModeSel.value || '').toLowerCase();
      if (v === 'stock') stockHint.classList.remove('d-none');
      else stockHint.classList.add('d-none');
    }

    toggleStockHint();
    deliveryModeSel?.addEventListener('change', toggleStockHint);
  </script>
</body>
</html>
