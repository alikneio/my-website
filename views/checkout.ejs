<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Checkout - <%= product.name %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
 <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>

  <%- include('partials/header') %>

  <div class="container my-5">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <div class="card p-4 shadow-sm">

        <!-- صورة المنتج -->
        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid mb-3" style="max-height: 120px; object-fit: contain;">

        <!-- اسم المنتج والسعر -->
        <h4 class="fw-bold mb-1"><%= product.name %></h4>
        <p class="fs-5 text-success mb-3">$<%= parseFloat(product.price).toFixed(2) %></p>

        <!-- ملاحظات المنتج إن وجدت -->
        <% if (product.notes) { %>
          <div class="alert alert-warning small mb-4">
            <strong>📝 Note:</strong> <%= product.notes %>
          </div>
        <% } %>

        <!-- ✅ نموذج الشراء -->
        <form id="sql-buy-form" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="productId" value="<%= product.id %>">

          <% if (product.requires_player_id == 1) { %>
            <div class="mb-3">
              <label for="playerId" class="form-label">
                <%= product.player_id_label || 'Player ID' %>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="playerId" 
                name="playerId" 
                placeholder="Enter <%= product.player_id_label || 'Player ID' %>" 
                required
              >
            </div>
          <% } %>

          <button type="submit" class="btn btn-success w-100">Buy Now</button>
        </form>

      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- مكتبة SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>

  <!-- سكريبت الشراء -->
  <script>
    const form = document.getElementById('sql-buy-form');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);

      try {
        const res = await fetch('/buy', {
          method: 'POST',
          body: formData
        });

        const data = await res.json();

        if (!data.success) {
          Swal.fire({
            icon: 'error',
            title: 'خطأ',
            text: data.message || 'حدث خطأ أثناء تنفيذ العملية.'
          });
        } else {
          window.location.href = '/processing';
        }

      } catch (err) {
        Swal.fire({
          icon: 'error',
          title: 'فشل العملية',
          text: 'تعذر تنفيذ الطلب، تأكد من الاتصال بالإنترنت.'
        });
      }
    });
  </script>

</body>
</html>
