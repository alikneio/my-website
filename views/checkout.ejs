<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Checkout - <%= product.name %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

  <%- include('partials/header') %>

  <div class="container my-5">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <div class="card p-4 shadow-sm">

        <!-- ØµÙˆØ±Ø© Ø§Ù„Ù…Ù†ØªØ¬ -->
        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid mb-3" style="max-height: 120px; object-fit: contain;">

        <!-- Ø§Ø³Ù… Ø§Ù„Ù…Ù†ØªØ¬ ÙˆØ§Ù„Ø³Ø¹Ø± -->
        <h4 class="fw-bold mb-1"><%= product.name %></h4>
        <p class="fs-5 text-success mb-3">$<%= Number(product.price).toFixed(2) %></p>

        <!-- Ù…Ù„Ø§Ø­Ø¸Ø§Øª Ø§Ù„Ù…Ù†ØªØ¬ Ø¥Ù† ÙˆØ¬Ø¯Øª -->
        <% if (product.notes) { %>
          <div class="alert alert-warning small mb-4">
            <strong>ğŸ“ Note:</strong> <%= product.notes %>
          </div>
        <% } %>

        <!-- âœ… Ù†Ù…ÙˆØ°Ø¬ Ø§Ù„Ø´Ø±Ø§Ø¡ -->
        <form id="sql-buy-form" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="productId" value="<%= product.id %>">

          <!-- Ù…ÙØªØ§Ø­ Ø¹Ø¯Ù… Ø§Ù„ØªÙƒØ±Ø§Ø± -->
          <input type="hidden" name="idempotency_key" value="<%= idemKey %>">

          <% if (product.requires_player_id == 1) { %>
            <div class="mb-3">
              <label for="playerId" class="form-label">
                <%= product.player_id_label || 'Player ID' %>
              </label>
              <input
                type="text"
                class="form-control"
                id="playerId"
                name="playerId"
                placeholder="Enter <%= product.player_id_label || 'Player ID' %>"
                required
              >
            </div>
          <% } %>

          <button id="buyBtn" type="submit" class="btn btn-success w-100">
            <span class="btn-text">Buy Now</span>
            <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
          </button>
        </form>

      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Ø³ÙƒØ±ÙŠØ¨Øª Ø§Ù„Ø´Ø±Ø§Ø¡ -->
  <script>
    const form = document.getElementById('sql-buy-form');
    const buyBtn = document.getElementById('buyBtn');
    const btnText = buyBtn.querySelector('.btn-text');
    const btnSpinner = buyBtn.querySelector('.spinner-border');
    let submitting = false;

    function setLoading(state) {
      submitting = state;
      buyBtn.disabled = state;
      if (state) {
        btnSpinner.classList.remove('d-none');
        btnText.textContent = 'Processing...';
      } else {
        btnSpinner.classList.add('d-none');
        btnText.textContent = 'Buy Now';
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (submitting) return;           // Ø­Ø§Ø±Ø³ Ø¥Ø¶Ø§ÙÙŠ
      setLoading(true);

      try {
        const formData = new FormData(form);
        const res = await fetch('/buy', { method: 'POST', body: formData });

        // Ø¨Ø¹Ø¶ Ø§Ù„Ø³ÙŠØ±ÙØ±Ø§Øª Ù‚Ø¯ ØªØ±Ø¬Ø¹ Redirect Ù…Ø¨Ø§Ø´Ø±Ø© (Ù†Ø§Ø¯Ø± Ù…Ø¹ fetch+JSONØŒ Ø¨Ø³ Ù„Ù„Ø§Ø­ØªÙŠØ§Ø·)
        if (res.redirected) {
          window.location.href = res.url;
          return;
        }

        const data = await res.json();

        if (!data.success) {
          setLoading(false);
          Swal.fire({
            icon: 'error',
            title: 'Ø®Ø·Ø£',
            text: data.message || 'Ø­Ø¯Ø« Ø®Ø·Ø£ Ø£Ø«Ù†Ø§Ø¡ ØªÙ†ÙÙŠØ° Ø§Ù„Ø¹Ù…Ù„ÙŠØ©.'
          });
          return;
        }

        // Ø¯Ø¹Ù… redirectUrl Ù…Ù† Ø§Ù„Ø³ÙŠØ±ÙØ±
        if (data.redirectUrl) {
          window.location.href = data.redirectUrl;
        } else {
          window.location.href = '/processing';
        }

      } catch (err) {
        console.error(err);
        setLoading(false);
        Swal.fire({
          icon: 'error',
          title: 'ÙØ´Ù„ Ø§Ù„Ø¹Ù…Ù„ÙŠØ©',
          text: 'ØªØ¹Ø°Ø± ØªÙ†ÙÙŠØ° Ø§Ù„Ø·Ù„Ø¨ØŒ ØªØ£ÙƒØ¯ Ù…Ù† Ø§Ù„Ø§ØªØµØ§Ù„ Ø¨Ø§Ù„Ø¥Ù†ØªØ±Ù†Øª.'
        });
      }
    });
  </script>

</body>
</html>
