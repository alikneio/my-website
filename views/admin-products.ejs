<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body class="bg-light">

<div class="d-flex">
    <%- include('partials/admin-sidebar') %>

    <div class="container-fluid p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Products</h1>
            <div>
                <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
                <a href="/admin/products/new" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New Product</a>
            </div>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (products && products.length > 0) { %>
                                <% products.forEach(product => { %>
                                    <tr>
                                        <td><%= product.id %></td>
                                        <td><img src="<%= product.image %>" alt="<%= product.name %>" width="50" class="rounded"></td>
                                        <td><%= product.name %></td>
                                        <td><%= product.main_category %> / <%= product.sub_category %></td>
                                        <td>$<%= parseFloat(product.price).toFixed(2) %></td>
                                        <td>
                                            <a href="/admin/products/edit/<%= product.id %>" class="btn btn-warning btn-sm">Edit</a>
                                            <button class="btn btn-danger btn-sm delete-btn" data-id="<%= product.id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center p-4">No products found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');
        deleteButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                const productId = e.target.dataset.id;
                if (confirm(`Are you sure you want to delete this product?`)) {
                    fetch(`/admin/products/delete/${productId}`, {
                        method: 'POST',
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert(`Error: ${data.message}`);
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        alert('An error occurred.');
                    });
                }
            });
        });
    });
</script>

</body>
</html>