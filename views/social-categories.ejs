<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Social Media Services - AK Cell</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-4">
    <!-- العنوان -->
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="section-title mb-0">
        <i class="bi bi-instagram"></i> Social Media Services
      </h2>
    </div>

    <% if (!categories || categories.length === 0) { %>
      <!-- لو ما في كاتيجوريز -->
      <div class="alert alert-warning text-center">
        No categories available at the moment.
      </div>
    <% } else { %>
      <!-- لستة الكاتيجوريز -->
      <div class="row row-cols-2 row-cols-md-4 g-3">
        <% categories.forEach(function(cat){ %>
          <div class="col">
            <a href="/social-media/<%= cat.slug %>"
               class="category-card service-card text-decoration-none h-100">
              <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center text-center">
                  <i class="bi bi-collection-play-fill fs-1 mb-2"></i>
                  <h5 class="card-title mb-1"><%= cat.category %></h5>
                  <small class="text-muted">
                    <%= cat.services_count %> services
                  </small>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>
</body>
</html>
