<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Transaction History</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
<link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
  <style>
    th, td {
      vertical-align: middle;
    }
    @media (max-width: 576px) {
      h3 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body class="bg-light">
  <%- include('partials/header') %>

  <div class="container-fluid px-3 px-md-5 mt-4">
    <h3 class="mb-3"><i class="bi bi-list-ol text-primary"></i> Transaction History</h3>

    <% if (transactions.length === 0) { %>
      <div class="alert alert-info">No transactions yet.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="table-light">
            <tr>
              <th class="text-nowrap">Type</th>
              <th class="text-nowrap">Amount</th>
              <th class="text-nowrap">Reason</th>
              <th class="text-nowrap">Date</th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach(tx => { %>
              <tr>
                <td>
                  <span class="badge <%= tx.type === 'debit' ? 'bg-danger' : 'bg-success' %>">
                    <%= tx.type === 'debit' ? 'Deduction' : 'Refund' %>
                  </span>
                </td>
                <td>$<%= tx.amount %></td>
                <td><%= tx.reason %></td>
                <td><%= new Date(tx.date).toLocaleString('en-US') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>
</body>
</html>
