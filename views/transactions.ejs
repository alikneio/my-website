<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Transactions - AK Cell</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    body { background: #f6f7fb; }
    .page-title { font-weight: 800; }
    .card-soft {
      border: 0;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(15,23,42,0.08);
    }
    .mono {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
      font-variant-numeric: tabular-nums;
    }
    .badge-soft {
      border-radius: 999px;
      padding: 6px 10px;
      font-weight: 700;
      font-size: .75rem;
      border: 1px solid transparent;
    }
    .badge-debit   { background: rgba(239,68,68,.12); color:#b91c1c; }
    .badge-credit  { background: rgba(34,197,94,.12); color:#166534; }
    .badge-refund  { background: rgba(14,165,233,.12); color:#075985; }
  </style>
</head>

<body>
<%- include('partials/header') %>

<div class="container py-4">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title">
      <i class="bi bi-cash-coin text-primary me-2"></i>Transactions
    </h2>
    <div class="text-muted small">
      Balance: <strong>$<%= Number(user.balance || 0).toFixed(2) %></strong>
    </div>
  </div>

  <!-- Filters -->
  <div class="card card-soft mb-3">
    <div class="card-body">
      <form method="GET" action="/transactions" class="row g-2 align-items-end">

        <div class="col-md-5">
          <label class="form-label fw-semibold">Search</label>
          <input
            type="text"
            name="q"
            value="<%= meta.q || '' %>"
            class="form-control"
            placeholder="Search by reason…"
          />
        </div>

        <div class="col-md-3">
          <label class="form-label fw-semibold">Type</label>
          <select name="type" class="form-select">
            <option value="">All</option>
            <option value="debit"  <%= meta.type==='debit'?'selected':'' %>>Debit</option>
            <option value="credit" <%= meta.type==='credit'?'selected':'' %>>Credit</option>
            <option value="refund" <%= meta.type==='refund'?'selected':'' %>>Refund</option>
          </select>
        </div>

        <div class="col-md-2">
          <label class="form-label fw-semibold">Per page</label>
          <select name="limit" class="form-select">
            <% [10,20,50,100].forEach(n => { %>
              <option value="<%= n %>" <%= meta.limit==n?'selected':'' %>><%= n %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-2 d-grid">
          <button class="btn btn-primary">
            <i class="bi bi-funnel me-1"></i>Apply
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Table -->
  <div class="card card-soft">
    <div class="card-body">

      <% if (!transactions || transactions.length === 0) { %>
        <div class="alert alert-info mb-0">
          No transactions found.
        </div>
      <% } else { %>

        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Type</th>
                <th>Amount</th>
                <th>Reason</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>

            <% transactions.forEach(tx => { 
              const t = String(tx.type || '').toLowerCase();
              const isRefund = t==='refund' || (tx.reason||'').toLowerCase().includes('refund');
              let badge = 'badge-credit', label='CREDIT', sign='+';

              if (t==='debit') { badge='badge-debit'; label='DEBIT'; sign='-'; }
              if (isRefund)    { badge='badge-refund'; label='REFUND'; sign='+'; }
            %>

              <tr>
                <td>
                  <span class="badge-soft <%= badge %>"><%= label %></span>
                </td>
                <td class="mono fw-bold <%= sign==='-'?'text-danger':'text-success' %>">
                  <%= sign %>$<%= Number(tx.amount || 0).toFixed(2) %>
                </td>
                <td>
                  <%= tx.reason || '-' %>
                  <% if (tx.id) { %>
                    <div class="text-muted small">TX# <%= tx.id %></div>
                  <% } %>
                </td>
                <td class="mono text-muted">
                  <%= tx.tx_date ? new Date(tx.tx_date).toLocaleString('en-US',{hour12:false}) : '-' %>
                </td>
              </tr>

            <% }) %>

            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="text-muted small">
            Page <strong><%= meta.page %></strong> of <strong><%= meta.pages %></strong> — Total <strong><%= meta.total %></strong>
          </div>

          <div class="btn-group">
            <a class="btn btn-outline-secondary btn-sm <%= meta.page<=1?'disabled':'' %>"
               href="/transactions?page=<%= meta.page-1 %>&limit=<%= meta.limit %>&q=<%= meta.q||'' %>&type=<%= meta.type||'' %>">
              Prev
            </a>
            <a class="btn btn-outline-secondary btn-sm <%= meta.page>=meta.pages?'disabled':'' %>"
               href="/transactions?page=<%= meta.page+1 %>&limit=<%= meta.limit %>&q=<%= meta.q||'' %>&type=<%= meta.type||'' %>">
              Next
            </a>
          </div>
        </div>

      <% } %>

    </div>
  </div>

  <div class="mt-3">
    <a href="/" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>Back to Home
    </a>
  </div>

</div>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
