<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= categoryName %> – Social Media Services</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet" />

  <style>
    body {
      font-family: "Cairo", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: #f3f4f8;
    }

    /* ========= HEADER / TOP ============ */
    .smc-shell {
      max-width: 1180px;
    }

    .smc-header {
      padding: 12px 0 8px;
      border-bottom: 1px solid rgba(148,163,184,.45);
      margin-bottom: 14px;
    }

    .smc-title-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      flex-wrap: wrap;
    }

    .smc-title-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .smc-icon {
      width: 40px;
      height: 40px;
      border-radius: 14px;
      background: #111827;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-size: 20px;
    }

    .smc-title {
      font-size: 1.3rem;
      font-weight: 800;
      margin: 0;
      color: #0f172a;
    }

    .smc-sub {
      font-size: .8rem;
      color: #6b7280;
      margin: 0;
    }

    .smc-pill-counter {
      font-size: .75rem;
      border-radius: 999px;
      padding: 5px 10px;
      background: #e5edff;
      color: #1d4ed8;
      border: 1px solid rgba(37,99,235,.25);
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .smc-formula {
      font-size: .8rem;
      color: #6b7280;
      display: flex;
      gap: 6px;
      align-items: center;
      margin-top: 6px;
    }

    /* ========= FILTER BAR ============ */
    .smc-filter {
      margin-top: 12px;
      margin-bottom: 16px;
      border-radius: 12px;
      border: 1px solid rgba(148,163,184,.25);
      background: #ffffff;
      padding: 10px 12px;
    }

    .smc-filter label {
      font-size: .78rem;
      color: #6b7280;
      margin-bottom: 3px;
    }

    /* ========= NEW CARD ============ */
    .smc-card-wrap {
      display: flex;
      height: 100%;
    }

    .smc-card {
      position: relative;
      background: #ffffff;
      border-radius: 18px;
      padding: 14px 14px 12px 18px;
      border: 1px solid rgba(148, 163, 184, 0.28);
      box-shadow: 0 10px 28px rgba(15, 23, 42, 0.10);
      transition: all .22s ease;
      flex: 1 1 auto;
      overflow: hidden;
    }

    .smc-card::before {
      content: "";
      position: absolute;
      left: 0;
      top: 6px;
      bottom: 6px;
      width: 3px;
      border-radius: 999px;
      background: linear-gradient(180deg, #3b82f6, #6366f1);
      opacity: .9;
    }

    .smc-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 16px 40px rgba(15,23,42,.18);
      border-color: rgba(59,130,246,.6);
    }

    .smc-card-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 6px;
      margin-bottom: 4px;
    }

    .smc-type-badge {
      font-size: .7rem;
      border-radius: 999px;
      padding: 3px 9px;
      background: #eef2ff;
      color: #4338ca;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: .04em;
    }

    .smc-id {
      font-size: .72rem;
      color: #9ca3af;
    }

    .smc-name {
      margin: 0;
      font-size: .98rem;
      font-weight: 700;
      color: #0f172a;
    }

    .smc-provider {
      font-size: .78rem;
      color: #6b7280;
      margin-top: 2px;
    }

    .smc-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
      margin-top: 6px;
      margin-bottom: 4px;
    }

    .smc-tag {
      font-size: .7rem;
      padding: 3px 8px;
      border-radius: 999px;
      background: #f3f4ff;
      color: #4338ca;
    }

    .smc-tag.refill {
      background: #ecfeff;
      color: #0f766e;
    }

    .smc-tag.no-refill {
      background: #fef2f2;
      color: #b91c1c;
    }

    .smc-meta-grid {
      margin-top: 8px;
      padding: 8px 10px;
      border-radius: 12px;
      background: #f9fafb;
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 4px 8px;
    }

    .smc-meta-label {
      font-size: .75rem;
      color: #6b7280;
    }
    .smc-meta-value {
      font-size: .9rem;
      font-weight: 700;
      color: #111827;
    }

    .smc-footer {
      margin-top: 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 8px;
      font-size: .78rem;
      color: #6b7280;
    }
    .smc-footer strong {
      color: #111827;
    }

    .smc-btn {
      border-radius: 999px;
      padding: 6px 14px;
      font-size: .85rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .smc-btn i {
      font-size: .9rem;
    }

    .smc-empty {
      border-radius: 18px;
      background: #f9fafb;
      padding: 22px;
      border: 1px dashed #cbd5f5;
    }

    .smm-card-hidden {
      display: none !important;
    }

    @media (max-width: 575.98px) {
      .smc-header {
        padding-bottom: 6px;
      }
      .smc-title-row {
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { user }) %>

  <main class="py-4">
    <div class="container smc-shell">

      <!-- BREADCRUMB -->
      <nav aria-label="breadcrumb" class="mb-2">
        <ol class="breadcrumb small mb-1">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/social-media">Social Media</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= categoryName %></li>
        </ol>
      </nav>

      <!-- TOP HEADER -->
      <header class="smc-header">
        <div class="smc-title-row">
          <div class="smc-title-left">
            <div class="smc-icon">
              <i class="bi bi-broadcast-pin"></i>
            </div>
            <div>
              <p class="text-uppercase small text-muted mb-1">Social media · Category</p>
              <h1 class="smc-title"><%= categoryName %></h1>
              <p class="smc-sub">اختر الخدمة المناسبة، ثم أدخل الرابط والكمية من صفحة الـ Checkout.</p>
            </div>
          </div>

          <div>
            <span class="smc-pill-counter">
              <i class="bi bi-lightning-charge-fill"></i>
              <span><strong><%= services.length %></strong> service(s) in this category</span>
            </span>
          </div>
        </div>

        <div class="smc-formula">
          <i class="bi bi-calculator"></i>
          <span>السعر النهائي = <strong>(الكمية × السعر لكل 1000) ÷ 1000</strong>.</span>
        </div>
      </header>

      <!-- FILTER BAR -->
      <section class="smc-filter">
        <div class="row g-2 align-items-center">
          <div class="col-md-6">
            <label class="form-label">Search in this category</label>
            <div class="input-group input-group-sm">
              <span class="input-group-text bg-transparent border-end-0">
                <i class="bi bi-search"></i>
              </span>
              <input
                type="text"
                id="serviceSearch"
                class="form-control border-start-0"
                placeholder="Search by name, keyword…"
              />
            </div>
          </div>

          <div class="col-md-3">
            <label class="form-label">Sort</label>
            <select id="sortSelect" class="form-select form-select-sm">
              <option value="default">Recommended</option>
              <option value="price-asc">Price: Low to high</option>
              <option value="price-desc">Price: High to low</option>
              <option value="min-asc">Min quantity: Low first</option>
              <option value="min-desc">Min quantity: High first</option>
            </select>
          </div>

          <div class="col-md-3 text-md-end">
            <label class="form-label d-block">&nbsp;</label>
            <span class="small text-muted">
              Showing <strong><%= services.length %></strong> services.
            </span>
          </div>
        </div>
      </section>

      <!-- GRID / CARDS -->
      <% if (!services || !services.length) { %>
        <div class="smc-empty text-center">
          <h6 class="mb-1">لا توجد خدمات متاحة حالياً في هذه الفئة.</h6>
          <p class="small text-muted mb-0">
            جرّب فئة أخرى من صفحة <a href="/social-media">خدمات السوشيال ميديا</a>.
          </p>
        </div>
      <% } else { %>

        <div id="servicesGrid" class="row g-3">
          <% services.forEach(function(s) {
               const minCost = (Number(s.rate || 0) * Number(s.min_qty || 0)) / 1000;

               const hasRefill  = (s.name || '').toLowerCase().includes('refill');
               const noRefill   = (s.name || '').toLowerCase().includes('no refill');
          %>
            <div
              class="col-12 col-md-6 col-xl-4 service-card-wrapper"
              data-name="<%= (s.name || '').toLowerCase() %>"
              data-rate="<%= Number(s.rate || 0) %>"
              data-min="<%= Number(s.min_qty || 0) %>">

              <div class="smc-card">
                <div class="smc-card-top">
                  <span class="smc-type-badge">
                    <%= (s.type || 'Default').toString().toUpperCase() %>
                  </span>
                  <span class="smc-id">#<%= s.id %></span>
                </div>

                <h2 class="smc-name"><%= s.name %></h2>

                <p class="smc-provider">
                  <i class="bi bi-globe2 me-1"></i>
                  Social service
                </p>

                <div class="smc-tags">
                  <span class="smc-tag">
                    <i class="bi bi-graph-up-arrow me-1"></i> Best price
                  </span>
                  <span class="smc-tag">
                    <i class="bi bi-speedometer2 me-1"></i> Fast start
                  </span>

                  <% if (hasRefill) { %>
                    <span class="smc-tag refill">
                      <i class="bi bi-shield-check me-1"></i> Refill
                    </span>
                  <% } %>

                  <% if (noRefill) { %>
                    <span class="smc-tag no-refill">
                      <i class="bi bi-slash-circle me-1"></i> No refill
                    </span>
                  <% } %>
                </div>

                <div class="smc-meta-grid">
                  <div>
                    <div class="smc-meta-label">Rate / 1000</div>
                    <div class="smc-meta-value text-primary">
                      $<%= Number(s.rate || 0).toFixed(4) %>
                    </div>
                  </div>
                  <div>
                    <div class="smc-meta-label">Min</div>
                    <div class="smc-meta-value"><%= s.min_qty %></div>
                  </div>
                  <div>
                    <div class="smc-meta-label">Max</div>
                    <div class="smc-meta-value"><%= s.max_qty %></div>
                  </div>
                </div>

                <div class="smc-footer">
                  <div>
                    Minimum ≈
                    <strong>$<%= isNaN(minCost) ? '0.0000' : minCost.toFixed(4) %></strong>
                  </div>
                  <a href="/social-checkout/<%= s.id %>" class="btn btn-primary smc-btn">
                    <i class="bi bi-cart-plus"></i>
                    Order
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    (function () {
      const searchInput  = document.getElementById('serviceSearch');
      const sortSelect   = document.getElementById('sortSelect');
      const cards        = Array.from(document.querySelectorAll('.service-card-wrapper'));

      // Search
      if (searchInput) {
        searchInput.addEventListener('input', function () {
          const term = this.value.toLowerCase().trim();
          cards.forEach(card => {
            const name = card.getAttribute('data-name') || '';
            if (!term || name.includes(term)) {
              card.classList.remove('smm-card-hidden');
            } else {
              card.classList.add('smm-card-hidden');
            }
          });
        });
      }

      // Sort
      if (sortSelect) {
        sortSelect.addEventListener('change', function () {
          const mode = this.value;
          const grid = document.getElementById('servicesGrid');
          if (!grid) return;

          const sorted = [...cards].sort((a, b) => {
            const rateA = Number(a.getAttribute('data-rate') || 0);
            const rateB = Number(b.getAttribute('data-rate') || 0);
            const minA  = Number(a.getAttribute('data-min') || 0);
            const minB  = Number(b.getAttribute('data-min') || 0);

            switch (mode) {
              case 'price-asc':  return rateA - rateB;
              case 'price-desc': return rateB - rateA;
              case 'min-asc':    return minA - minB;
              case 'min-desc':   return minB - minA;
              default:           return 0;
            }
          });

          sorted.forEach(card => grid.appendChild(card));
        });
      }
    })();
  </script>
</body>
</html>
