<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= categoryName %> – Social Media Services</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: "Cairo", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background-color: #f3f5fb;
    }

    /* ===== TOP BAR جديد تماماً ===== */
    .smm-topbar {
      padding: 10px 4px 14px;
      border-bottom: 1px solid rgba(148, 163, 184, .35);
      margin-bottom: 10px;
    }
    .smm-top-title {
      font-size: 1.25rem;
      font-weight: 800;
      color: #0f172a;
      margin-bottom: 2px;
    }
    .smm-top-sub {
      font-size: .84rem;
      color: #6b7280;
      margin: 0;
    }
    .smm-top-right {
      font-size: .78rem;
      text-align: right;
      color: #6b7280;
    }
    .smm-top-right strong {
      color: #111827;
    }
    .smm-top-icon {
      width: 34px;
      height: 34px;
      border-radius: 12px;
      background: #111827;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      margin-right: 8px;
      font-size: 18px;
    }

    /* سطر الفورمولا تحت التوب بار مباشرة */
    .smm-formula {
      font-size: .8rem;
      color: #6b7280;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    /* ===== FILTER TOOLBAR خفيفة ===== */
    .smm-toolbar {
      border-radius: 12px;
      background: #ffffff;
      padding: 10px 12px;
      border: 1px solid rgba(148, 163, 184, 0.2);
      margin-bottom: 16px;
    }
    .smm-toolbar label {
      font-size: .78rem;
      color: #6b7280;
      margin-bottom: 3px;
    }

    /* ===== CARDS ===== */
    .service-card-modern {
      border-radius: 20px;
      padding: 16px 16px 14px;
      background: #ffffff;
      border: 1px solid rgba(148, 163, 184, 0.25);
      box-shadow: 0 10px 26px rgba(15, 23, 42, 0.08);
      transition: all 0.22s ease;
      height: 100%;
      position: relative;
      overflow: hidden;
    }
    .service-card-modern::before {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top left, rgba(59, 130, 246, 0.18), transparent 55%);
      opacity: 0;
      transition: opacity 0.25s ease;
      pointer-events: none;
    }
    .service-card-modern:hover::before {
      opacity: 1;
    }
    .service-card-modern:hover {
      transform: translateY(-6px);
      box-shadow: 0 20px 42px rgba(15, 23, 42, 0.16);
      border-color: rgba(59, 130, 246, 0.55);
    }

    .smm-badge-type {
      background: linear-gradient(135deg, #4f46e5, #3b82f6);
      color: #ffffff;
      padding: 3px 9px;
      border-radius: 999px;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .smm-id {
      font-size: 0.7rem;
      color: #9ca3af;
    }

    .service-name {
      font-size: 0.98rem;
      font-weight: 700;
      color: #0f172a;
      margin-top: 8px;
      margin-bottom: 4px;
      min-height: 2.4em;
    }
    .service-provider {
      font-size: 0.8rem;
      color: #6b7280;
    }

    .service-meta-chips {
      margin-top: 6px;
      margin-bottom: 3px;
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
      font-size: 0.74rem;
    }
    .service-chip {
      padding: 3px 8px;
      border-radius: 999px;
      background-color: #eef2ff;
      color: #4338ca;
    }

    .service-metrics {
      border-radius: 14px;
      background: #f9fafb;
      padding: 10px 12px;
      margin-top: 10px;
    }
    .service-metrics .label {
      font-size: 0.78rem;
      color: #6b7280;
    }
    .service-metrics .value {
      font-size: 0.9rem;
      font-weight: 700;
      color: #111827;
    }

    .service-min-cost {
      font-size: 0.8rem;
      color: #6b7280;
      margin-top: 6px;
    }
    .service-min-cost strong {
      color: #111827;
    }

    .smm-buy-btn {
      background: #2563eb;
      border: none;
      width: 100%;
      padding: 9px 0;
      border-radius: 12px;
      color: #ffffff;
      font-size: 0.9rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      margin-top: 10px;
    }
    .smm-buy-btn:hover {
      background: #1d4ed8;
      color: #ffffff;
    }

    .smm-empty {
      border-radius: 18px;
      background: #f9fafb;
      padding: 22px;
      border: 1px dashed #cbd5f5;
    }

    .smm-card-hidden {
      display: none !important;
    }

    @media (max-width: 575.98px) {
      .smm-toolbar {
        padding: 8px 8px;
      }
      .smm-topbar {
        padding-bottom: 10px;
      }
      .smm-top-right {
        text-align: left;
        margin-top: 6px;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { user: user }) %>

  <main class="py-4">
    <div class="container" style="max-width: 1150px;">

      <!-- Breadcrumb -->
      <div class="mb-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb small mb-1">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/social-media">Social Media</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= categoryName %></li>
          </ol>
        </nav>
      </div>

      <!-- TOP BAR الجديد -->
      <section class="smm-topbar">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
          <div class="d-flex align-items-center">
            <div class="smm-top-icon">
              <i class="bi bi-broadcast-pin"></i>
            </div>
            <div>
              <div class="text-uppercase small fw-semibold text-primary mb-1">
                Social media · Category
              </div>
              <h1 class="smm-top-title"><%= categoryName %></h1>
              <p class="smm-top-sub">
                اختر الخدمة المناسبة، ثم أدخل الرابط والكمية من صفحة الـ Checkout.
              </p>
            </div>
          </div>

          <div class="smm-top-right">
            <div>
              <i class="bi bi-lightning-charge me-1 text-warning"></i>
              Instant / Auto services
            </div>
            <div>
              الأسعار معروضة لكل <strong>1000</strong> من الكمية.
            </div>
          </div>
        </div>
      </section>

      <!-- سطر الفورمولا فقط -->
      <div class="smm-formula">
        <i class="bi bi-info-circle"></i>
        <span>السعر النهائي = <strong>(الكمية × السعر لكل 1000) ÷ 1000</strong>.</span>
      </div>

      <!-- FILTER TOOLBAR -->
      <section class="smm-toolbar">
        <div class="row g-2 align-items-center">
          <div class="col-md-5">
            <label class="form-label mb-0">Search in this category</label>
            <div class="input-group input-group-sm">
              <span class="input-group-text bg-transparent border-end-0">
                <i class="bi bi-search"></i>
              </span>
              <input
                type="text"
                id="serviceSearch"
                class="form-control border-start-0"
                placeholder="Search by name, provider, keyword..."
              />
            </div>
          </div>

          <div class="col-md-3">
            <label class="form-label mb-0">Sort</label>
            <select id="sortSelect" class="form-select form-select-sm">
              <option value="default">Recommended</option>
              <option value="price-asc">Price: Low to high</option>
              <option value="price-desc">Price: High to low</option>
              <option value="min-asc">Min quantity: Low first</option>
              <option value="min-desc">Min quantity: High first</option>
            </select>
          </div>

          <div class="col-md-4 text-md-end">
            <span class="small text-muted">
              Showing <strong><%= services.length %></strong> services in this category.
            </span>
          </div>
        </div>
      </section>

      <!-- GRID -->
      <% if (!services || !services.length) { %>
        <div class="smm-empty text-center">
          <h6 class="mb-1">لا توجد خدمات متاحة حالياً في هذه الفئة.</h6>
          <p class="small text-muted mb-0">
            جرّب فئة أخرى من صفحة <a href="/social-media">خدمات السوشيال ميديا</a>.
          </p>
        </div>
      <% } else { %>

        <div id="servicesGrid" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
          <% services.forEach(function(s) {
               const minCost = (Number(s.rate || 0) * Number(s.min_qty || 0)) / 1000;
          %>
            <div class="col service-card-wrapper"
                 data-name="<%= (s.name || '').toLowerCase() %>"
                 data-rate="<%= Number(s.rate || 0) %>"
                 data-min="<%= Number(s.min_qty || 0) %>">

              <div class="service-card-modern">
                <!-- Top row: type + id -->
                <div class="d-flex justify-content-between align-items-start mb-1">
                  <span class="smm-badge-type">
                    <%= (s.type || 'Default').toString().charAt(0).toUpperCase() + (s.type || 'default').toString().slice(1) %>
                  </span>
                  <span class="smm-id">#<%= s.id %></span>
                </div>

                <!-- Name -->
                <div class="service-name">
                  <%= s.name %>
                </div>

                <!-- Provider / generic label -->
                <div class="service-provider">
                  <% if ((s.name || '').includes('Global')) { %>
                    <i class="bi bi-globe-americas me-1"></i> Global / Worldwide
                  <% } else { %>
                    <i class="bi bi-globe2 me-1"></i> Social service
                  <% } %>
                </div>

                <!-- Little chips (decor فقط) -->
                <div class="service-meta-chips">
                  <span class="service-chip">
                    <i class="bi bi-graph-up-arrow me-1"></i>
                    Best price
                  </span>
                  <span class="service-chip">
                    <i class="bi bi-clock-history me-1"></i>
                    Fast start
                  </span>
                </div>

                <!-- Metrics -->
                <div class="service-metrics">
                  <div class="d-flex justify-content-between">
                    <div>
                      <div class="label">Rate / 1000</div>
                      <div class="value text-primary">
                        $<%= Number(s.rate || 0).toFixed(4) %>
                      </div>
                    </div>
                    <div>
                      <div class="label">Min</div>
                      <div class="value"><%= s.min_qty %></div>
                    </div>
                    <div>
                      <div class="label">Max</div>
                      <div class="value"><%= s.max_qty %></div>
                    </div>
                  </div>
                </div>

                <!-- Min cost -->
                <div class="service-min-cost">
                  Minimum cost ≈
                  <strong>$<%= isNaN(minCost) ? '0.0000' : minCost.toFixed(4) %></strong>
                </div>

                <!-- CTA -->
                <a href="/social-checkout/<%= s.id %>" class="btn smm-buy-btn">
                  <i class="bi bi-cart-plus"></i>
                  Buy this service
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    (function () {
      const searchInput   = document.getElementById('serviceSearch');
      const sortSelect    = document.getElementById('sortSelect');
      const cardWrappers  = Array.from(document.querySelectorAll('.service-card-wrapper'));

      // Filter by name
      if (searchInput) {
        searchInput.addEventListener('input', function () {
          const term = this.value.toLowerCase().trim();
          cardWrappers.forEach(card => {
            const name = card.getAttribute('data-name') || '';
            if (!term || name.includes(term)) {
              card.classList.remove('smm-card-hidden');
            } else {
              card.classList.add('smm-card-hidden');
            }
          });
        });
      }

      // Sorting
      if (sortSelect) {
        sortSelect.addEventListener('change', function () {
          const mode = this.value;
          const grid = document.getElementById('servicesGrid');
          if (!grid) return;

          const sorted = [...cardWrappers].sort((a, b) => {
            const rateA = Number(a.getAttribute('data-rate') || 0);
            const rateB = Number(b.getAttribute('data-rate') || 0);
            const minA  = Number(a.getAttribute('data-min') || 0);
            const minB  = Number(b.getAttribute('data-min') || 0);

            switch (mode) {
              case 'price-asc':  return rateA - rateB;
              case 'price-desc': return rateB - rateA;
              case 'min-asc':    return minA  - minB;
              case 'min-desc':   return minB  - minA;
              default:           return 0;
            }
          });

          sorted.forEach(card => grid.appendChild(card));
        });
      }
    })();
  </script>
</body>
</html>
