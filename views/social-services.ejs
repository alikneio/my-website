<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= category %> - Social Media Services</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="section-title mb-0">
        <i class="bi bi-instagram"></i> <%= category %>
      </h2>
      <a href="/social-media" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back to categories
      </a>
    </div>

    <% if (!services || services.length === 0) { %>
      <div class="alert alert-warning text-center">
        No services in this category yet.
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-3">
        <% services.forEach(function(srv) { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= srv.name %></h5>

                <% if (srv.type) { %>
                  <span class="badge bg-secondary mb-2"><%= srv.type %></span>
                <% } %>

                <% if (srv.description) { %>
                  <p class="card-text small text-muted">
                    <%= srv.description %>
                  </p>
                <% } %>

                <div class="mt-auto">
                  <div class="fw-bold">
                    Rate: $<%= Number(srv.rate).toFixed(4) %> / 1000
                  </div>

                  <div class="text-muted small">
                    Min: <%= srv.min_qty %> | Max: <%= srv.max_qty %>
                  </div>

                  <a href="/social-checkout/<%= srv.id %>" class="btn btn-primary w-100 mt-3">
                    Order now
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>
</body>
</html>
