<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= categoryName %> â€“ Social Media Services</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet" />

  <style>
    body {
      font-family: "Cairo", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: #f3f4f8;
    }

    .smc-shell { max-width: 1180px; }

    /* ===== HEADER ===== */
    .smc-header {
      padding: 12px 0 8px;
      margin-bottom: 10px;
      border-bottom: 1px solid rgba(148,163,184,.25);
    }
    .smc-title-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      flex-wrap: wrap;
    }
    .smc-left {
      display: flex;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
    }

    .smc-back-btn {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 4px 10px;
      border-radius: 999px;
      border: 1px solid rgba(148,163,184,.5);
      font-size: 0.8rem;
      color: #4b5563;
      text-decoration: none;
      background: #ffffff;
    }
    .smc-back-btn i {
      font-size: 0.9rem;
    }
    .smc-back-btn:hover {
      color: #111827;
      border-color: rgba(30,64,175,.8);
      background: #eef2ff;
      text-decoration: none;
    }

    .smc-icon {
      width: 38px;
      height: 38px;
      border-radius: 12px;
      background: #111827;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-size: 18px;
      flex-shrink: 0;
    }
    .smc-title {
      font-size: 1.3rem;
      font-weight: 800;
      margin: 0;
      color: #0f172a;
    }
    .smc-sub {
      margin: 2px 0 0;
      font-size: .8rem;
      color: #6b7280;
    }
    .smc-actions {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 4px;
    }
    .smc-pill-counter {
      font-size: .75rem;
      border-radius: 999px;
      padding: 5px 10px;
      background: #e5edff;
      color: #1d4ed8;
      border: 1px solid rgba(37,99,235,.25);
      display: inline-flex;
      align-items: center;
      gap: 6px;
      white-space: nowrap;
    }

    /* ===== FILTER BAR ===== */
    .smc-filter {
      margin: 10px 0 16px;
      border-radius: 12px;
      border: 1px solid rgba(148,163,184,.25);
      background: #ffffff;
      padding: 10px 12px;
    }
    .smc-filter label {
      font-size: .78rem;
      color: #6b7280;
      margin-bottom: 2px;
    }

    /* Search pill */
    .smc-search-pill {
      display: flex;
      align-items: center;
      gap: 8px;
      border-radius: 999px;
      background: #f9fafb;
      border: 1px solid rgba(148, 163, 184, 0.6);
      padding: 6px 10px;
    }
    .smc-search-pill-icon {
      font-size: 0.9rem;
      color: #6b7280;
    }
    .smc-search-pill input {
      border: none;
      background: transparent;
      width: 100%;
      font-size: 0.9rem;
      padding: 4px 0;
      outline: none;
      box-shadow: none;
    }
    .smc-search-pill input:focus {
      box-shadow: none;
    }

    .smc-sort-select {
      min-width: 170px;
    }
    .smc-count {
      font-size: 0.8rem;
      color: #6b7280;
    }

    /* ===== CARDS ===== */
    .smc-card-wrap { display: flex; height: 100%; }

    .smc-card {
      position: relative;
      background: #ffffff;
      border-radius: 16px;
      padding: 12px 12px 10px 16px;
      border: 1px solid rgba(148, 163, 184, 0.28);
      box-shadow: 0 8px 22px rgba(15, 23, 42, 0.08);
      transition: all .22s ease;
      flex: 1 1 auto;
      overflow: hidden;
    }
    .smc-card::before {
      content: "";
      position: absolute;
      left: 0;
      top: 6px;
      bottom: 6px;
      width: 3px;
      border-radius: 999px;
      background: linear-gradient(180deg, #3b82f6, #6366f1);
      opacity: .9;
    }
    .smc-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 14px 32px rgba(15,23,42,.16);
      border-color: rgba(59,130,246,.6);
    }

    .smc-card-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 6px;
      margin-bottom: 4px;
    }
    .smc-type-badge {
      font-size: .7rem;
      border-radius: 999px;
      padding: 3px 9px;
      background: #eef2ff;
      color: #4338ca;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: .04em;
    }
    .smc-id {
      font-size: .72rem;
      color: #9ca3af;
    }

    .smc-name {
      margin: 0;
      font-size: .96rem;
      font-weight: 700;
      color: #0f172a;
    }
    .smc-provider {
      font-size: .78rem;
      color: #6b7280;
      margin-top: 2px;
    }

    .smc-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
      margin-top: 6px;
      margin-bottom: 4px;
    }
    .smc-tag {
      font-size: .7rem;
      padding: 3px 8px;
      border-radius: 999px;
      background: #f3f4ff;
      color: #4338ca;
    }
    .smc-tag.refill {
      background: #ecfeff;
      color: #0f766e;
    }
    .smc-tag.no-refill {
      background: #fef2f2;
      color: #b91c1c;
    }

    .smc-meta-grid {
      margin-top: 8px;
      padding: 7px 9px;
      border-radius: 12px;
      background: #f9fafb;
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 4px 8px;
    }
    .smc-meta-label {
      font-size: .75rem;
      color: #6b7280;
    }
    .smc-meta-value {
      font-size: .88rem;
      font-weight: 700;
      color: #111827;
    }

    .smc-footer {
      margin-top: 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 8px;
      font-size: .78rem;
      color: #6b7280;
    }
    .smc-footer strong { color: #111827; }

    .smc-btn {
      border-radius: 999px;
      padding: 6px 14px;
      font-size: .82rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .smc-empty {
      border-radius: 16px;
      background: #f9fafb;
      padding: 20px;
      border: 1px dashed #cbd5f5;
    }

    .smm-card-hidden { display: none !important; }

    /* ===== Mobile ===== */
    @media (max-width: 575.98px) {
      .smc-header {
        padding-top: 8px;
        padding-bottom: 6px;
      }
      .smc-title {
        font-size: 1.1rem;
      }
      .smc-sub {
        font-size: .76rem;
      }
      .smc-icon {
        width: 34px;
        height: 34px;
        font-size: 16px;
      }
      .smc-filter {
        padding: 8px 10px;
      }
      .smc-card {
        padding: 10px 11px 9px 14px;
      }
      .smc-meta-grid {
        padding: 6px 8px;
      }

      .smc-filter {
        padding: 8px 10px;
        margin-bottom: 10px;
      }
      .smc-search-pill {
        padding: 5px 9px;
      }
      .smc-search-pill input {
        font-size: 0.84rem;
      }
      .smc-sort-select {
        width: 100%;
      }
      .smc-count {
        width: 100%;
        text-align: left;
        margin-top: 4px;
      }
    }
  </style>
</head>
<body>
  <!-- Same header with Menu button -->
  <%- include('partials/header', { user }) %>

  <main class="py-3">
    <div class="container smc-shell">

      <!-- HEADER -->
      <header class="smc-header">
        <div class="smc-title-row">
          <div class="smc-left">
            <a href="/social-media" class="smc-back-btn">
              <i class="bi bi-arrow-left"></i>
              <span>Back</span>
            </a>

            <div class="smc-icon">
              <i class="bi bi-broadcast-pin"></i>
            </div>
            <div>
              <h1 class="smc-title"><%= categoryName %></h1>
              <p class="smc-sub">
                Choose the service you like, then enter your link and quantity from the checkout page.
              </p>
            </div>
          </div>

          <div class="smc-actions">
            <span class="smc-pill-counter">
              <i class="bi bi-lightning-charge-fill"></i>
              <span><strong><%= services.length %></strong> service(s)</span>
            </span>
          </div>
        </div>
      </header>

      <!-- FILTER BAR (new pill style) -->
      <section class="smc-filter">
        <div class="d-flex flex-column flex-md-row align-items-md-center gap-3">

          <!-- Search -->
          <div class="flex-grow-1">
            <label class="form-label mb-1">Search in this category</label>
            <div class="smc-search-pill">
              <span class="smc-search-pill-icon">
                <i class="bi bi-search"></i>
              </span>
              <input
                type="text"
                id="serviceSearch"
                class="form-control p-0 border-0 bg-transparent"
                placeholder="Search by name, keyword, refill, global..."
              />
            </div>
          </div>

          <!-- Sort + count -->
          <div class="d-flex flex-column flex-md-row align-items-md-center gap-2">
            <div>
              <label class="form-label mb-1">Sort</label>
              <select id="sortSelect" class="form-select form-select-sm smc-sort-select">
                <option value="default">Recommended</option>
                <option value="price-asc">Price: Low to high</option>
                <option value="price-desc">Price: High to low</option>
                <option value="min-asc">Min quantity: Low first</option>
                <option value="min-desc">Min quantity: High first</option>
              </select>
            </div>

            <div class="smc-count ms-md-3">
              Showing <strong><%= services.length %></strong> services.
            </div>
          </div>

        </div>
      </section>

      <!-- GRID -->
      <% if (!services || !services.length) { %>
        <div class="smc-empty text-center">
          <h6 class="mb-1">No services available in this category yet.</h6>
          <p class="small text-muted mb-0">
            Try another category from the <a href="/social-media">social media services page</a>.
          </p>
        </div>
      <% } else { %>

        <div id="servicesGrid" class="row g-3">
          <% services.forEach(function(s) {
               const minCost = (Number(s.rate || 0) * Number(s.min_qty || 0)) / 1000;
               const nameLower = (s.name || '').toLowerCase();
               const hasRefill  = nameLower.includes('refill');
               const noRefill   = nameLower.includes('no refill');
          %>
            <div
              class="col-12 col-md-6 col-xl-4 service-card-wrapper"
              data-name="<%= nameLower %>"
              data-rate="<%= Number(s.rate || 0) %>"
              data-min="<%= Number(s.min_qty || 0) %>">

              <div class="smc-card">
                <div class="smc-card-top">
                  <span class="smc-type-badge"><%= (s.type || 'Default').toString().toUpperCase() %></span>
                  <span class="smc-id">#<%= s.id %></span>
                </div>

                <h2 class="smc-name"><%= s.name %></h2>
                <p class="smc-provider">
                  <i class="bi bi-globe2 me-1"></i> Social media service
                </p>

                <div class="smc-tags">
                  <span class="smc-tag">
                    <i class="bi bi-graph-up-arrow me-1"></i> Best price
                  </span>
                  <span class="smc-tag">
                    <i class="bi bi-speedometer2 me-1"></i> Fast start
                  </span>
                  <% if (hasRefill) { %>
                    <span class="smc-tag refill">
                      <i class="bi bi-shield-check me-1"></i> Refill
                    </span>
                  <% } %>
                  <% if (noRefill) { %>
                    <span class="smc-tag no-refill">
                      <i class="bi bi-slash-circle me-1"></i> No refill
                    </span>
                  <% } %>
                </div>

                <div class="smc-meta-grid">
                  <div>
                    <div class="smc-meta-label">Rate</div>
                    <div class="smc-meta-value text-primary">
                      $<%= Number(s.rate || 0).toFixed(4) %>
                    </div>
                  </div>
                  <div>
                    <div class="smc-meta-label">Min</div>
                    <div class="smc-meta-value"><%= s.min_qty %></div>
                  </div>
                  <div>
                    <div class="smc-meta-label">Max</div>
                    <div class="smc-meta-value"><%= s.max_qty %></div>
                  </div>
                </div>

                <div class="smc-footer">
                  <div>
                    Approx. minimum price:
                    <strong>$<%= isNaN(minCost) ? '0.0000' : minCost.toFixed(4) %></strong>
                  </div>
                  <a href="/social-checkout/<%= s.id %>" class="btn btn-primary smc-btn">
                    <i class="bi bi-cart-plus"></i> Order
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Bootstrap JS so Menu button works -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    (function () {
      const searchInput  = document.getElementById('serviceSearch');
      const sortSelect   = document.getElementById('sortSelect');
      const cards        = Array.from(document.querySelectorAll('.service-card-wrapper'));

      // Search
      if (searchInput) {
        searchInput.addEventListener('input', function () {
          const term = this.value.toLowerCase().trim();
          cards.forEach(card => {
            const name = card.getAttribute('data-name') || '';
            if (!term || name.includes(term)) {
              card.classList.remove('smm-card-hidden');
            } else {
              card.classList.add('smm-card-hidden');
            }
          });
        });
      }

      // Sort
      if (sortSelect) {
        sortSelect.addEventListener('change', function () {
          const mode = this.value;
          const grid = document.getElementById('servicesGrid');
          if (!grid) return;

          const sorted = [...cards].sort((a, b) => {
            const rateA = Number(a.getAttribute('data-rate') || 0);
            const rateB = Number(b.getAttribute('data-rate') || 0);
            const minA  = Number(a.getAttribute('data-min') || 0);
            const minB  = Number(b.getAttribute('data-min') || 0);

            switch (mode) {
              case 'price-asc':  return rateA - rateB;
              case 'price-desc': return rateB - rateA;
              case 'min-asc':    return minA - minB;
              case 'min-desc':   return minB - minA;
              default:           return 0;
            }
          });

          sorted.forEach(card => grid.appendChild(card));
        });
      }
    })();
  </script>
</body>
</html>
