<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Social Media Checkout - <%= service.name %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet" />

  <style>
    body {
      font-family: "Cairo", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background-color: #f5f7fb;
    }

    .checkout-container {
      max-width: 900px;
    }

    .checkout-card {
      border-radius: 18px;
      border: 1px solid #e5e7eb;
      box-shadow: 0 8px 22px rgba(15,23,42,0.08);
    }

    .checkout-header-line {
      border-top: 1px solid #e5e7eb;
      margin: 12px 0 16px;
    }

    .rate-box-label {
      font-size: 0.8rem;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: .03em;
    }

    .rate-box-value {
      font-weight: 700;
      font-size: 1rem;
    }

    .rate-box-group {
      display: flex;
      gap: 16px;
      margin-top: 6px;
      justify-content: flex-end;
    }

    .rate-box-small .rate-box-label {
      font-size: 0.75rem;
    }

    .rate-box-small .rate-box-value {
      font-size: 0.9rem;
    }

    .notes-card {
      border-radius: 12px;
      background-color: #f9fafb;
      border: 1px solid #e5e7eb;
    }

    .notes-card h5 {
      font-size: 0.95rem;
      margin-bottom: 8px;
    }

    .notes-card ul {
      padding-left: 18px;
      margin-bottom: 0;
    }

    .notes-card li {
      font-size: 0.82rem;
      margin-bottom: 4px;
      color: #4b5563;
    }

    .estimate-card {
      border-radius: 12px;
      background-color: #f9fafb;
      border: 1px solid #e5e7eb;
    }

    .estimate-label {
      font-size: 0.8rem;
      color: #6b7280;
    }

    .estimate-value {
      font-weight: 700;
      font-size: 1rem;
    }

    .balance-label {
      font-size: 0.78rem;
      color: #6b7280;
    }

    .balance-value {
      font-weight: 700;
      color: #16a34a;
    }

    .checkout-title {
      font-size: 1.25rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .checkout-title i {
      font-size: 1.3rem;
    }

    .btn-confirm {
      border-radius: 999px;
      font-weight: 600;
      padding: 10px 0;
    }

    .alert-error {
      border-radius: 12px;
      font-size: 0.9rem;
    }

    @media (max-width: 575.98px) {
      .rate-box-group {
        justify-content: flex-start;
      }
    }
  </style>
</head>
<body>
  <!-- نفس الـ partial القديم -->
  <%- include('partials/navbar', { user: user }) %>

  <main class="py-4">
    <div class="container checkout-container">

      <!-- عنوان الصفحة + زر رجوع -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="checkout-title mb-0">
          <i class="bi bi-instagram"></i>
          Social Media Services
        </h1>

        <a href="/social-media" class="btn btn-outline-secondary btn-sm">
          <i class="bi bi-arrow-left"></i> Back
        </a>
      </div>

      <!-- رسالة الخطأ -->
      <% if (error) { %>
        <div class="alert alert-danger d-flex align-items-start gap-2 alert-error">
          <i class="bi bi-exclamation-triangle-fill mt-1"></i>
          <div>
            <% if (error === 'provider') { %>
              <strong>Provider rejected the order.</strong><br />
              <% if (errorMessage) { %>
                Provider message: <code><%= errorMessage %></code><br />
              <% } %>
              Please check:
              <ul class="mb-0">
                <li>Link is complete and starts with <code>http://</code> or <code>https://</code></li>
                <li>Account / post is <strong>Public</strong>, not private</li>
                <li>Link matches the service type</li>
              </ul>
            <% } else if (error === 'missing_fields') { %>
              <strong>Missing fields.</strong> Please enter link and quantity.
            <% } else if (error === 'invalid_quantity') { %>
              <strong>Invalid quantity.</strong> Please enter a positive number within allowed range.
            <% } else if (error === 'range') { %>
              <strong>Quantity out of range.</strong> Min: <%= rangeMin %>, Max: <%= rangeMax %>.
            <% } else if (error === 'balance') { %>
              <strong>Insufficient balance.</strong> You can add funds from <a href="/add-funds">Add funds</a>.
            <% } else if (error === 'pricing') { %>
              <strong>Pricing error.</strong> Please try again later.
            <% } else if (error === 'no_provider_id') { %>
              <strong>No provider order ID received.</strong> Amount has been refunded.
            <% } else if (error === 'service_not_found') { %>
              <strong>Service not found or inactive.</strong>
            <% } else if (error === 'server') { %>
              <strong>Internal server error.</strong> Please try again later.
            <% } else { %>
              <strong>Could not complete order.</strong> Please try again.
            <% } %>
          </div>
        </div>
      <% } %>

      <!-- الكارد الرئيسي -->
      <div class="card checkout-card">
        <div class="card-body">

          <!-- عنوان الخدمة + بلوك الأرقام المرتب -->
          <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap gap-2">
            <div>
              <h2 class="h5 mb-1"><%= service.name %></h2>

              <% if (service.category_name) { %>
                <p class="text-muted mb-1">
                  Category:
                  <strong><%= service.category_name %></strong>
                </p>
              <% } %>
            </div>

            <div class="text-end">
              <div class="rate-box-label">RATE / 1000</div>
              <div class="rate-box-value text-primary">
                $<%= Number(service.rate).toFixed(4) %>
              </div>

              <div class="rate-box-group">
                <div class="text-end rate-box-small">
                  <div class="rate-box-label">MIN</div>
                  <div class="rate-box-value"><%= service.min_qty %></div>
                </div>
                <div class="text-end rate-box-small">
                  <div class="rate-box-label">MAX</div>
                  <div class="rate-box-value"><%= service.max_qty %></div>
                </div>
              </div>
            </div>
          </div>

          <div class="checkout-header-line"></div>

          <div class="row g-3">
            <!-- الفورم -->
            <div class="col-md-8">
              <form method="POST" action="/buy-social">
                <input type="hidden" name="service_id" value="<%= service.id %>" />
                <% if (idemKey) { %>
                  <input type="hidden" name="idempotency_key" value="<%= idemKey %>" />
                <% } %>

                <!-- Link -->
                <div class="mb-3">
                  <label class="form-label">Link (URL or username)</label>
                  <div class="form-text mb-1">
                    Paste the profile / post / video link. Make sure it is accessible and public.
                  </div>
                  <input
                    type="text"
                    name="link"
                    class="form-control"
                    placeholder="Paste the profile / post / video link here"
                    value="<%= formLink || '' %>"
                    required
                  />
                </div>

                <!-- Quantity -->
                <div class="mb-3">
                  <label class="form-label">
                    Quantity
                    <small class="text-muted">
                      (Min <%= service.min_qty %>, Max <%= service.max_qty %>)
                    </small>
                  </label>
                  <input
                    type="number"
                    name="quantity"
                    class="form-control"
                    min="<%= service.min_qty %>"
                    max="<%= service.max_qty %>"
                    value="<%= formQty || '' %>"
                    required
                  />
                </div>

                <!-- Estimated price -->
                <div class="mb-3">
                  <div class="estimate-card d-flex justify-content-between align-items-center">
                    <div>
                      <div class="estimate-label">Estimated price</div>
                      <div class="estimate-value">
                        $<span id="estimated-price">0.00</span>
                      </div>
                      <div class="estimate-label">
                        Rate: $<%= Number(service.rate).toFixed(4) %> / 1000
                      </div>
                    </div>
                    <div class="text-end">
                      <div class="balance-label">Your balance</div>
                      <div class="balance-value">
                        $<%= Number(balance || 0).toFixed(2) %>
                      </div>
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-confirm">
                  Confirm Order
                </button>
              </form>
            </div>

            <!-- الملاحظات -->
            <div class="col-md-4">
              <div class="notes-card p-3">
                <h5>Important notes</h5>

                <% if (service.notes_html) { %>
                  <div class="small">
                    <%- service.notes_html %>
                  </div>
                <% } else if (service.notes) { %>
                  <p class="small mb-0"><%= service.notes %></p>
                <% } else { %>
                  <ul>
                    <li>Make sure the link is correct and <strong>public</strong> (not private).</li>
                    <li>Do not change username / link until the order is fully completed.</li>
                    <li>Quantity must be between the allowed min and max.</li>
                    <li>Delivery time depends on the speed of the provider and the queue.</li>
                  </ul>
                <% } %>
              </div>
            </div>
          </div> <!-- row -->
        </div>
      </div>
    </div>
  </main>

  <script>
    // حساب السعر المتوقع في الواجهة (الحساب الرسمي بالسيرفر)
    (function () {
      const ratePer1000 = <%= Number(service.rate || 0) %>;
      const qtyInput = document.querySelector('input[name="quantity"]');
      const priceSpan = document.getElementById('estimated-price');

      function updateEst() {
        const q = Number(qtyInput.value || 0);
        if (!q || !ratePer1000) {
          priceSpan.textContent = '0.00';
          return;
        }
        const total = (q * ratePer1000) / 1000;
        priceSpan.textContent = total.toFixed(4);
      }

      if (qtyInput && priceSpan) {
        qtyInput.addEventListener('input', updateEst);
        updateEst();
      }
    })();
  </script>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
