<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login - AK Cell</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Cairo', sans-serif;
      background: linear-gradient(to right, #e9eff5, #f4f7fa);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-card {
      border-radius: 20px;
      padding: 40px 30px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
      background-color: white;
      width: 100%;
      max-width: 420px;
    }
    .login-card h2 {
      font-weight: 700;
      color: #1e3c72;
    }
    .btn-primary {
      background-color: #1e3c72;
      border-color: #1e3c72;
    }
    .btn-primary:hover {
      background-color: #16325c;
      border-color: #16325c;
    }
  </style>
</head>
<body>

  <% if (query.error === 'session') { %>
    <div class="alert alert-warning position-absolute top-0 start-50 translate-middle-x mt-3 w-75 text-center">
      ðŸ”’ Please log in to continue.
    </div>
  <% } %>

  <div class="login-card">
    <h2 class="text-center mb-4">Welcome Back</h2>

    <form id="login-form">
      <div id="error-message" class="alert alert-danger d-none"></div>

      <div class="mb-3">
        <label for="login_identifier" class="form-label">Email or Username</label>
        <input type="text" class="form-control" id="login_identifier" name="login_identifier" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>

      <div id="captcha-wrapper" style="display: none; margin-top: 15px;">
  <div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div>

</div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">Login</button>
      </div>
    </form>

    <div class="text-center mt-3">
      <small class="text-muted">Don't have an account? <a href="/register">Register here</a></small>
    </div>
  </div>


  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script>
    document.getElementById("login-form").addEventListener("submit", async function (e) {
      e.preventDefault();
      const identifier = document.getElementById("login_identifier").value.trim();
      const password = document.getElementById("password").value;
      const captcha = document.querySelector(".g-recaptcha-response")?.value || "";

      const res = await fetch("/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ login_identifier: identifier, password, captcha })
      });

      const data = await res.json();

      const errorBox = document.getElementById("error-message");
      if (data.success && data.redirectUrl) {
        window.location.href = data.redirectUrl;
      } else {
        errorBox.textContent = data.message || "Login failed.";
        errorBox.classList.remove("d-none");

        if (data.showCaptcha) {
          document.getElementById("captcha-wrapper").style.display = "block";
        }
      }
    });
  </script>
</body>
</html>
