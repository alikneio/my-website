<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Users - Admin Panel</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    :root{
      --bg0:#020617;
      --bg1:#0b1224;
      --card: rgba(15, 23, 42, 0.78);
      --stroke: rgba(148,163,184,0.25);
      --stroke2: rgba(148,163,184,0.35);
      --text:#e5e7eb;
      --muted:#94a3b8;
      --brand:#3b82f6;
      --danger:#ef4444;
      --ok:#22c55e;
      --warn:#f59e0b;
    }

    body{
      background:
        radial-gradient(900px 500px at 10% 10%, rgba(59,130,246,0.20), transparent 55%),
        radial-gradient(700px 420px at 90% 0%, rgba(34,197,94,0.12), transparent 55%),
        radial-gradient(900px 560px at 40% 110%, rgba(245,158,11,0.10), transparent 60%),
        var(--bg0);
      color: var(--text);
      font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
      overflow-x: hidden;
    }

    .admin-wrapper{ min-height: 100vh; }
    .admin-main{ padding: 1.25rem; }

    .page-hero{
      background: linear-gradient(135deg, rgba(15,23,42,0.8), rgba(2,6,23,0.85));
      border: 1px solid var(--stroke);
      border-radius: 22px;
      box-shadow: 0 24px 60px rgba(0,0,0,0.35);
      padding: 18px 18px;
    }

    .page-title{
      letter-spacing: 0.02em;
      margin: 0;
    }

    .subtext{
      color: var(--muted);
      margin: 0;
      font-size: 0.92rem;
    }

    .btn-soft{
      border-radius: 999px;
      border: 1px solid rgba(148,163,184,0.35);
      background: rgba(2,6,23,0.30);
      color: var(--text);
    }
    .btn-soft:hover{ border-color: rgba(148,163,184,0.6); }

    .btn-brand{
      border-radius: 999px;
      background: linear-gradient(135deg, rgba(59,130,246,0.95), rgba(37,99,235,0.95));
      border: 0;
      color: white;
      box-shadow: 0 14px 30px rgba(59,130,246,0.25);
    }
    .btn-brand:hover{ filter: brightness(1.03); }

    .btn-danger-soft{
      border-radius: 999px;
      background: rgba(239,68,68,0.12);
      border: 1px solid rgba(239,68,68,0.55);
      color: #fecaca;
    }
    .btn-danger-soft:hover{ background: rgba(239,68,68,0.18); }

    .stats-grid{
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 12px;
      margin-top: 12px;
    }
    @media (max-width: 992px){
      .stats-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }

    .stat-card{
      background: rgba(2,6,23,0.55);
      border: 1px solid var(--stroke);
      border-radius: 18px;
      padding: 14px 14px;
      position: relative;
      overflow: hidden;
    }
    .stat-card::after{
      content:"";
      position:absolute;
      inset:auto -40px -40px auto;
      width: 140px;
      height: 140px;
      background: radial-gradient(circle, rgba(59,130,246,0.18), transparent 65%);
      transform: rotate(15deg);
    }
    .stat-label{
      font-size: 0.72rem;
      text-transform: uppercase;
      letter-spacing: 0.10em;
      color: rgba(148,163,184,0.95);
    }
    .stat-value{
      font-size: 1.15rem;
      font-weight: 700;
      margin-top: 4px;
      color: #f8fafc;
    }

    .card-glass{
      margin-top: 14px;
      background: var(--card);
      border-radius: 22px;
      border: 1px solid var(--stroke);
      box-shadow: 0 22px 55px rgba(0,0,0,0.35);
      overflow: hidden;
    }

    .toolbar{
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      padding: 14px 14px;
      border-bottom: 1px solid rgba(148,163,184,0.16);
      background: rgba(2,6,23,0.35);
    }

    .search-wrap{
      position: relative;
      min-width: 240px;
      max-width: 360px;
      flex: 1;
    }
    .search-icon{
      position:absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(148,163,184,0.9);
      pointer-events: none;
    }
    .search-input{
      background: rgba(2,6,23,0.60);
      border-radius: 999px;
      border: 1px solid rgba(148,163,184,0.35);
      color: var(--text);
      padding-left: 40px;
    }
    .search-input:focus{
      outline: none;
      box-shadow: 0 0 0 3px rgba(59,130,246,0.20);
      border-color: rgba(59,130,246,0.85);
      background: rgba(2,6,23,0.70);
      color: #fff;
    }

    .table-wrap{
      background: rgba(2,6,23,0.55);
      border-top: 1px solid rgba(148,163,184,0.10);
    }

    table.users-table{
      margin: 0;
      color: var(--text);
      font-size: 0.92rem;
    }

    .users-table thead th{
      position: sticky;
      top: 0;
      z-index: 1;
      background: linear-gradient(90deg, rgba(17,24,39,0.95), rgba(31,41,55,0.95));
      border-bottom: 0;
      text-transform: uppercase;
      font-size: 0.72rem;
      letter-spacing: 0.10em;
      color: rgba(148,163,184,0.95);
      padding: 0.85rem 0.75rem;
      white-space: nowrap;
    }

    .users-table tbody tr{
      background: rgba(2,6,23,0.65);
      transition: background 0.15s ease, transform 0.05s ease;
    }
    .users-table tbody tr:nth-child(even){
      background: rgba(2,6,23,0.80);
    }
    .users-table tbody tr:hover{
      background: rgba(59,130,246,0.12);
      transform: translateY(-1px);
    }

    .mini{
      font-size: 0.80rem;
      color: rgba(148,163,184,0.95);
    }

    .chip{
      display:inline-flex;
      align-items:center;
      gap: 6px;
      padding: 0.25rem 0.55rem;
      border-radius: 999px;
      border: 1px solid rgba(148,163,184,0.25);
      background: rgba(2,6,23,0.35);
      font-size: 0.80rem;
      white-space: nowrap;
    }
    .chip-admin{
      background: rgba(239,68,68,0.10);
      border-color: rgba(239,68,68,0.45);
      color: #fecaca;
    }
    .chip-user{
      background: rgba(59,130,246,0.10);
      border-color: rgba(59,130,246,0.45);
      color: #bfdbfe;
    }
    .chip-level{
      background: rgba(245,158,11,0.12);
      border-color: rgba(245,158,11,0.55);
      color: #fde68a;
    }
    .chip-disc{
      background: rgba(34,197,94,0.10);
      border-color: rgba(34,197,94,0.55);
      color: #bbf7d0;
    }

    .actions .btn{
      padding: 0.22rem 0.55rem;
      font-size: 0.78rem;
      border-radius: 10px;
    }

    .avatar{
      width: 36px; height: 36px;
      border-radius: 12px;
      display: grid;
      place-items: center;
      background: rgba(59,130,246,0.14);
      border: 1px solid rgba(59,130,246,0.30);
      color: #bfdbfe;
      font-weight: 800;
      letter-spacing: 0.02em;
      flex: 0 0 auto;
    }

    .row-user{
      display:flex;
      align-items:center;
      gap: 10px;
      min-width: 220px;
    }

    .muted-link{
      color: rgba(148,163,184,0.95);
      text-decoration: none;
    }
    .muted-link:hover{ color: #e2e8f0; text-decoration: underline; }

    .modal-content{
      background: rgba(2,6,23,0.92);
      border: 1px solid rgba(148,163,184,0.22);
      border-radius: 18px;
      color: var(--text);
      box-shadow: 0 30px 70px rgba(0,0,0,0.55);
    }
    .modal-header{
      border-bottom: 1px solid rgba(148,163,184,0.14);
    }
    .modal-footer{
      border-top: 1px solid rgba(148,163,184,0.14);
    }
    .form-control-dark{
      background: rgba(2,6,23,0.65);
      border: 1px solid rgba(148,163,184,0.28);
      color: #fff;
      border-radius: 12px;
    }
    .form-control-dark:focus{
      box-shadow: 0 0 0 3px rgba(239,68,68,0.18);
      border-color: rgba(239,68,68,0.70);
    }
  </style>
</head>

<body>
  <div class="d-flex admin-wrapper">
    <%- include('partials/admin-sidebar') %>

    <div class="container-fluid admin-main">

      <!-- HERO HEADER -->
      <div class="page-hero">
        <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
          <div>
            <h2 class="page-title fw-bold text-white">
              <i class="bi bi-people-fill me-2"></i> Users
            </h2>
            <p class="subtext">
              Manage balances, levels, total spent and discounts.
            </p>
          </div>

          <div class="d-flex flex-wrap gap-2">
            <a href="/admin/users/add" class="btn btn-brand">
              <i class="bi bi-person-plus me-1"></i> Add User
            </a>

            <a href="/admin/users/reset-password/<%= user.id %>" class="btn btn-soft">
              <i class="bi bi-shield-lock me-1"></i> Reset My Password
            </a>

            <!-- ✅ زر الـ Reset -->
            <button
              id="openResetLevels"
              type="button"
              class="btn btn-danger-soft"
              data-bs-toggle="modal"
              data-bs-target="#resetLevelsModal"
            >
              <i class="bi bi-arrow-counterclockwise me-1"></i> Reset Levels
            </button>
          </div>
        </div>

        <!-- STATS -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-label">Total Users</div>
            <div class="stat-value"><%= users.length %></div>
          </div>

          <div class="stat-card">
            <div class="stat-label">Admins</div>
            <div class="stat-value"><%= users.filter(u => u.role === 'admin').length %></div>
          </div>

          <div class="stat-card">
            <div class="stat-label">Total Balance</div>
            <div class="stat-value">
              $<%= users.reduce((sum, u) => sum + Number(u.balance || 0), 0).toFixed(2) %>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-label">Avg Discount</div>
            <div class="stat-value">
              <%
                const avgDisc = users.length
                  ? users.reduce((sum, u) => sum + Number(u.discount_percent || 0), 0) / users.length
                  : 0;
              %>
              <%= avgDisc.toFixed(1) %>%
            </div>
          </div>
        </div>
      </div>

      <!-- TABLE CARD -->
      <div class="card-glass">
        <div class="toolbar">
          <div class="d-flex align-items-center gap-2">
            <div class="fw-semibold text-white">
              <i class="bi bi-list-ul me-1"></i> All Users
            </div>
            <span class="mini">(<%= users.length %>)</span>
          </div>

          <div class="d-flex flex-wrap gap-2 align-items-center" style="width: min(720px, 100%);">
            <div class="search-wrap">
              <i class="bi bi-search search-icon"></i>
              <input
                type="text"
                id="userSearch"
                class="form-control form-control-sm search-input"
                placeholder="Search by ID, username, email, phone..."
                autocomplete="off"
              />
            </div>

            <select id="roleFilter" class="form-select form-select-sm btn-soft" style="width: 150px;">
              <option value="">All Roles</option>
              <option value="admin">Admins</option>
              <option value="user">Users</option>
            </select>
          </div>
        </div>

        <div class="table-wrap">
          <div class="table-responsive" style="max-height: calc(100vh - 330px);">
            <table class="table table-hover align-middle users-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User</th>
                  <th>Balance</th>
                  <th>Level</th>
                  <th>Total Spent</th>
                  <th>Discount</th>
                  <th>Role</th>
                  <th>Phone</th>
                  <th>Created</th>
                  <th class="text-end">Actions</th>
                </tr>
              </thead>

              <tbody id="usersTableBody">
                <% users.forEach(u => { %>
                  <tr data-role="<%= (u.role || 'user').toLowerCase() %>">
                    <td class="fw-semibold">#<%= u.id %></td>

                    <td>
                      <div class="row-user">
                        <div class="avatar">
                          <%= (u.username || 'U').toString().trim().charAt(0).toUpperCase() %>
                        </div>
                        <div>
                          <div class="fw-semibold text-white"><%= u.username %></div>
                          <div class="mini">
                            <% if (u.email) { %>
                              <a class="muted-link" href="mailto:<%= u.email %>"><%= u.email %></a>
                            <% } else { %>
                              —
                            <% } %>
                          </div>
                        </div>
                      </div>
                    </td>

                    <td>
                      <span class="chip">
                        <i class="bi bi-wallet2"></i>
                        $<%= Number(u.balance || 0).toFixed(2) %>
                      </span>
                    </td>

                    <td>
                      <span class="chip chip-level">
                        <i class="bi bi-award"></i>
                        L<%= Number.isFinite(Number(u.level)) ? u.level : 0 %>
                      </span>
                    </td>

                    <td>
                      <span class="chip">
                        <i class="bi bi-graph-up-arrow"></i>
                        $<%= Number(u.total_spent || 0).toFixed(2) %>
                      </span>
                    </td>

                    <td>
                      <span class="chip chip-disc">
                        <i class="bi bi-percent"></i>
                        <%= Number(u.discount_percent || 0).toFixed(0) %>%
                      </span>
                    </td>

                    <td>
                      <% if ((u.role || '').toLowerCase() === 'admin') { %>
                        <span class="chip chip-admin">
                          <i class="bi bi-shield-lock"></i> Admin
                        </span>
                      <% } else { %>
                        <span class="chip chip-user">
                          <i class="bi bi-person"></i> User
                        </span>
                      <% } %>
                    </td>

                    <td class="mini"><%= u.phone || '—' %></td>

                    <td class="mini">
                      <%= u.created_at || u.createdAt || '—' %>
                    </td>

                    <td class="text-end actions">
                      <a href="/admin/users/edit/<%= u.id %>" class="btn btn-outline-warning btn-sm me-1" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                      </a>

                      <a href="/admin/users/reset-password/<%= u.id %>" class="btn btn-outline-light btn-sm me-1" title="Reset Password">
                        <i class="bi bi-key"></i>
                      </a>

                      <form action="/admin/users/delete/<%= u.id %>" method="POST" style="display:inline;"
                            onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- ✅ RESET MODAL -->
      <div class="modal fade" id="resetLevelsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">
                <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                Reset Levels & Discounts
              </h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
              <p class="mb-2" style="color: rgba(148,163,184,0.95);">
                This will reset for <b>ALL users</b>:
              </p>
              <ul class="mb-3" style="color: rgba(226,232,240,0.95);">
                <li><b>total_spent</b> → 0</li>
                <li><b>level</b> → 0</li>
                <li><b>discount_percent</b> → 0</li>
              </ul>

              <div class="p-3 rounded-3" style="background: rgba(239,68,68,0.08); border: 1px solid rgba(239,68,68,0.35);">
                <div class="fw-semibold mb-2">Type <code>RESET</code> to confirm</div>
                <input id="resetConfirmInput" class="form-control form-control-dark" placeholder="Type RESET" />
                <div class="mini mt-2">This action cannot be undone.</div>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-soft" data-bs-dismiss="modal">Cancel</button>

              <form id="resetLevelsForm" method="POST" action="/admin/levels/reset" class="m-0">
                <button
                  id="resetLevelsBtn"
                  type="submit"
                  class="btn btn-danger"
                  form="resetLevelsForm"
                  disabled
                >
                  <i class="bi bi-arrow-counterclockwise me-1"></i> Confirm Reset
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- مهم: bootstrap bundle لازم يكون موجود -->
  <script src="/css/bootstrap.bundle.min.js"></script>


  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // --- Filters ---
      const searchInput = document.getElementById('userSearch');
      const roleFilter = document.getElementById('roleFilter');
      const rows = Array.from(document.querySelectorAll('#usersTableBody tr'));

      function applyFilters() {
        const q = (searchInput?.value || '').toLowerCase().trim();
        const role = (roleFilter?.value || '').toLowerCase().trim();

        rows.forEach(row => {
          const text = row.innerText.toLowerCase();
          const rowRole = (row.getAttribute('data-role') || '').toLowerCase();
          const matchesText = !q || text.includes(q);
          const matchesRole = !role || rowRole === role;
          row.style.display = (matchesText && matchesRole) ? '' : 'none';
        });
      }

      if (searchInput) searchInput.addEventListener('input', applyFilters);
      if (roleFilter) roleFilter.addEventListener('change', applyFilters);

      // --- Reset confirm enable/disable ---
      const confirmInput = document.getElementById('resetConfirmInput');
      const resetBtn = document.getElementById('resetLevelsBtn');

      if (confirmInput && resetBtn) {
        confirmInput.addEventListener('input', () => {
          resetBtn.disabled = confirmInput.value.trim().toUpperCase() !== 'RESET';
        });
      }

      // --- When modal opens: clear input ---
      const modalEl = document.getElementById('resetLevelsModal');
      if (modalEl) {
        modalEl.addEventListener('show.bs.modal', () => {
          if (confirmInput) confirmInput.value = '';
          if (resetBtn) resetBtn.disabled = true;
        });
      }

      // ✅ ضمان فتح المودال حتى لو data-bs-toggle ما اشتغل
      const openBtn = document.getElementById('openResetLevels');
      if (openBtn && modalEl) {
        openBtn.addEventListener('click', () => {
          if (!window.bootstrap || !bootstrap.Modal) {
            alert('Bootstrap JS not loaded. Check /js/bootstrap.bundle.min.js');
            return;
          }
          bootstrap.Modal.getOrCreateInstance(modalEl).show();
        });
      }

      // ✅ Debug: تأكد الفورم عم ينرسل (اختياري)
      const form = document.getElementById('resetLevelsForm');
      if (form) {
        form.addEventListener('submit', () => console.log('✅ Reset form submitted'));
      }
    });
  </script>
</body>
</html>
