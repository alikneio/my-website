<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accounts - AK Cell</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <h1 class="text-center mb-4">Games Categories</h1>

    <% if (!categories || categories.length === 0) { %>
      <p class="text-center text-muted">No categories to show.</p>
    <% } else { %>
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
        <% categories.forEach(c => { %>
          <div class="col">
            <a href="/games/<%= c.slug %>" class="text-decoration-none">
              <div class="card cat-card shadow-sm text-center p-3 h-100">
                <img src="<%= c.image_url || '/images/default-category.png' %>" alt="<%= c.label %>" class="cat-img mb-2">
                <div class="fw-semibold text-dark"><%= c.label %></div>
                <small class="text-muted"><%= c.products_count %> products</small>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

    <script>
document.addEventListener("DOMContentLoaded", function () {
  console.log("✅ Search script loaded!");

  const searchInput = document.getElementById("searchInput");
  if (!searchInput) return;

  const searchForm = document.getElementById("searchForm");
  if (searchForm) {
    searchForm.addEventListener("submit", e => e.preventDefault());
  }

  searchInput.addEventListener("input", function () {
    const query = this.value.toLowerCase();

    // تأكد من وجود الكروت من هذا الكلاس
    const cards = document.querySelectorAll(".category-card");

    cards.forEach(card => {
      const title = card.textContent?.toLowerCase() || "";

      const cardWrapper = card.closest("div[class^='col']");
 // ضروري تحتوي الكرت

      if (cardWrapper) {
        if (title.includes(query)) {
          cardWrapper.style.display = "";
        } else {
          cardWrapper.style.display = "none";
        }
      }
    });
  });
});
</script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
</body>
</html>