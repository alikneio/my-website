<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= category.label %> - AK Cell</title>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    .product-card{border:0; transition:.2s}
    .product-card:hover{transform:translateY(-2px)}
    .product-image{height:140px; object-fit:contain}
    .oos-overlay{
      position:absolute; inset:0; background:rgba(0,0,0,.55);
      display:flex; align-items:center; justify-content:center;
      color:#fff; font-weight:700; border-radius:1rem;
      text-transform:uppercase; letter-spacing:.5px
    }
    .oos-card{opacity:.8}
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container my-5">
    <div class="d-flex align-items-center mb-4">
      <img src="<%= category.image_url || '/images/default-category.png' %>" alt="<%= category.label %>" style="height:42px; width:auto" class="me-2">
      <h1 class="h3 m-0"><%= category.label %> Products</h1>
    </div>

    <% if (!products || products.length === 0) { %>
      <p class="text-center text-muted">No products available in this category.</p>
    <% } else { %>
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
        <% products.forEach(p => { %>
          <div class="col">
            <div class="card product-card shadow-sm rounded-4 overflow-hidden position-relative <%= p.is_out_of_stock ? 'oos-card' : '' %>">
              <% if (p.is_out_of_stock) { %>
                <div class="oos-overlay">Out of Stock</div>
              <% } %>

              <div class="bg-white text-center p-3">
                <img src="<%= p.image %>" alt="<%= p.name %>" class="product-image w-100">
              </div>

              <div class="card-body text-center">
                <h6 class="fw-semibold text-dark mb-1"><%= p.name %></h6>

                <% if (p.price === null || typeof p.price === 'undefined') { %>
                  <div class="text-muted small mb-2">Variable quantity</div>
                <% } else { %>
                  <div class="text-primary fw-bold mb-2">$<%= Number(p.price).toFixed(2) %></div>
                <% } %>

                <% if (user) { %>
                  <% const btnText = p.variable_quantity ? 'Choose Quantity' : (p.requires_player_id ? 'Enter Details' : 'Buy Now'); %>
                  <a href="<%= p.is_out_of_stock ? '#' : ('/api-checkout/' + p.id) %>"
                     class="btn btn-primary w-100 <%= p.is_out_of_stock ? 'disabled' : '' %>"
                     <%= p.is_out_of_stock ? 'aria-disabled="true" tabindex="-1"' : '' %>>
                    <%= btnText %>
                  </a>
                <% } else { %>
                  <a href="/login" class="btn btn-secondary w-100">Login to Buy</a>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
