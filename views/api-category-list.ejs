<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category.label %> products - AK Cell</title>

  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

  <%- include('partials/header') %>

  <div class="container my-5">
    <h1 class="text-center mb-4"><%= category.label %> Products</h1>

    <!-- Search -->
    <div class="container my-5">
      <div class="search-bar-container">
        <form id="searchForm" action="#" method="GET" role="search" aria-label="Search products">
          <input
            type="search"
            id="searchInput"
            class="search-input"
            placeholder="Search for any service..."
            aria-label="Search products by name or ID"
            autocomplete="off"
          >
          <button type="submit" class="search-btn" aria-label="Search">
            <i class="bi bi-search"></i>
          </button>
        </form>
      </div>
    </div>

    <!-- Optional message (used when clicking out-of-stock) -->
    <div id="oosMsg" class="alert alert-danger d-none" role="alert" aria-live="polite"></div>

    <!-- Grid -->
    <div class="row g-3" id="productsGrid">
      <% if (products && products.length > 0) { %>

        <% products.forEach(function(p){ 
          // âœ… FIX: avoid !!"0" => true
          const isOut = Number(p.is_out_of_stock) === 1;
          const isVariable = Number(p.variable_quantity) === 1;

          const hrefFinal = user ? `/api-checkout/${p.id}` : '/login';
          const title = p.name || p.custom_name || ('Product ' + p.id);

          const unitLabel = p.unit_label || 'units';

          // Price: show only if NOT variable and is a finite number
          const priceNumRaw = (p.price !== null && p.price !== undefined && p.price !== '')
            ? Number(p.price)
            : null;

          const hasPrice = (!isVariable && priceNumRaw !== null && Number.isFinite(priceNumRaw));
          const priceNum = hasPrice ? priceNumRaw : null;

          const imgSrc = (p.image && String(p.image).trim()) ? p.image : '/images/webp/default-product.webp';

          const linkClass = `text-decoration-none d-block h-100 ${isOut ? 'disabled-link' : ''}`;
        %>

          <div class="col-6 col-sm-4 col-md-3 product-col"
               data-title="<%= String(title).toLowerCase() %>"
               data-id="<%= String(p.id) %>">
            <a
              href="<%= isOut ? 'javascript:void(0)' : hrefFinal %>"
              class="<%= linkClass %>"
              <%= isOut ? 'aria-disabled="true" tabindex="-1"' : '' %>
              title="<%= title %>"
              data-out="<%= isOut ? '1' : '0' %>"
              data-name="<%= title %>"
            >
              <div class="product-card border-0 shadow-sm rounded-4 overflow-hidden text-center bg-white h-100 animate-zoom">

                <div class="product-image-wrapper mb-2 position-relative <%= isOut ? 'oos' : '' %>">
  <% if (isOut) { %>
    <div class="out-of-stock-overlay">OUT OF STOCK</div>
  <% } %>

  <img
    src="<%= imgSrc %>"
    alt="<%= title %>"
    class="product-image rounded-3"
    loading="lazy"
  >
</div>


                <!-- Name -->
                <h6 class="fw-semibold text-dark mb-1"><%= title %></h6>

                <!-- Badges -->
                <div class="mb-1">
                  <% if (isVariable) { %>
                    <span class="badge bg-warning text-dark">Variable</span>
                  <% } else { %>
                    <span class="badge bg-success">Fixed</span>
                  <% } %>

                  <% if (isOut) { %>
                    <span class="badge bg-danger ms-1">Out of stock</span>
                  <% } %>
                </div>

                <!-- Price / Variable label -->
                <% if (priceNum !== null) { %>
                  <p class="text-primary fw-bold mb-0">$<%= priceNum.toFixed(2) %></p>
                <% } else { %>
                  <p class="text-muted fw-semibold mb-0">
                    <%= `Variable (${unitLabel})` %>
                  </p>
                <% } %>

                <small class="text-muted d-block mt-1">ID: <%= p.id %></small>

              </div>
            </a>
          </div>

        <% }) %>

      <% } else { %>
        <div class="col-12 text-center">
          <p class="text-muted fs-5">No products available in this category.</p>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const searchInput = document.getElementById("searchInput");
      const searchForm  = document.getElementById("searchForm");
      const grid        = document.getElementById("productsGrid");
      const oosMsg       = document.getElementById("oosMsg");

      if (searchForm) searchForm.addEventListener("submit", e => e.preventDefault());

      // Handle clicking Out of Stock items
      if (grid) {
        grid.addEventListener("click", function(e) {
          const a = e.target.closest("a");
          if (!a) return;

          const isOut = a.dataset.out === "1";
          if (!isOut) return;

          e.preventDefault();

          const name = a.dataset.name || "This product";
          if (oosMsg) {
            oosMsg.textContent = `${name} is currently out of stock.`;
            oosMsg.classList.remove("d-none");
            clearTimeout(window.__oosTimer);
            window.__oosTimer = setTimeout(() => oosMsg.classList.add("d-none"), 3000);
          }
        });
      }

      // Search (name + ID)
      if (searchInput) {
        searchInput.addEventListener("input", function () {
          const q = (this.value || "").toLowerCase().trim();
          const cols = document.querySelectorAll(".product-col");

          cols.forEach(col => {
            const title = col.dataset.title || "";
            const id = col.dataset.id || "";
            const match = !q || title.includes(q) || id.includes(q);
            col.style.display = match ? "" : "none";
          });
        });
      }
    });
  </script>
</body>
</html>
