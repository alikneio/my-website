<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Details - #<%= order.id %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet"/>

  <style>
    :root{
      --brand: #1266F1;
      --bg-soft: #f4f6fa;
      --title: #1d3557;
      --text: #222;
      --muted: #6c757d;
      --purple: #a855f7;
    }
    body{
      background: var(--bg-soft);
      font-family: 'Cairo', sans-serif;
      color: var(--text);
    }
    .order-wrapper{
      background:#fff;
      border-radius:16px;
      padding:1.75rem;
      box-shadow:0 8px 26px rgba(0,0,0,.06)
    }
    .section-title{
      font-size:2rem;
      font-weight:800;
      color:var(--title);
      letter-spacing:.3px;
    }
    .kv-label{
      font-weight:700;
      color:#495057;
      margin-bottom:.35rem
    }
    .kv-value{
      background:#f1f3f5;
      border-radius:10px;
      padding:.75rem 1rem;
      color:#212529;
      margin-bottom:1rem
    }
    .badge{
      font-size:.95rem;
      padding:.45rem .9rem
    }
    .badge-partial{
      background: var(--purple);
      color:#fff;
    }
    .btn-brand{
      background:var(--brand);
      border-color:var(--brand);
      color:#fff
    }
    .btn-brand:hover{
      filter:brightness(.95);
      color:#fff
    }
    .btn-ghost{
      background:#fff;
      border:1px solid #e6e9ef;
      color:#222
    }
    .actions{ gap:.5rem }
    .last-updated{
      color:var(--muted);
      font-size:.9rem
    }

    /* Delivery card */
    .delivery-box{
      border:1px solid rgba(0,0,0,.08);
      border-radius: 14px;
      padding: 12px 14px;
      background: rgba(18,102,241,.04);
    }
    .delivery-title{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:10px;
      margin-bottom: 8px;
    }
    .delivery-title h6{
      margin:0;
      font-weight:800;
      color: var(--title);
      display:flex;
      align-items:center;
      gap:8px;
    }
    .delivery-preview{
      background:#f1f3f5;
      border-radius:10px;
      padding:.75rem 1rem;
      margin:0;
      white-space: pre-wrap;
      word-break: break-word;
    }
    .btn-mini{
      border-radius: 10px;
      display:inline-flex;
      align-items:center;
      gap:.4rem;
    }
    .hidden-note{
      color: var(--muted);
      font-size: .9rem;
    }

    @media (max-width: 768px){
      .section-title{ font-size:1.6rem }
      .order-wrapper{ padding:1.25rem }
    }
  </style>
</head>
<body>

  <%- include('partials/header') %>

  <main class="container my-5">
    <div class="order-wrapper">
      <div class="d-flex align-items-center justify-content-between flex-wrap mb-3">
        <h2 class="section-title mb-3 mb-md-0">Order Details</h2>

        <div class="d-flex align-items-center actions">
          <div id="status-badge" class="me-2">
            <% if (order.status === 'Accepted') { %>
              <span class="badge bg-success" id="order-status"><%= order.status %></span>
            <% } else if (order.status === 'Rejected') { %>
              <span class="badge bg-danger" id="order-status"><%= order.status %></span>
            <% } else if (order.status === 'Partial') { %>
              <span class="badge badge-partial" id="order-status">Partial</span>
            <% } else if (order.status === 'In progress') { %>
              <span class="badge bg-info text-dark" id="order-status">In progress</span>
            <% } else { %>
              <span class="badge bg-warning text-dark" id="order-status"><%= order.status %></span>
            <% } %>
          </div>

          <button id="refreshBtn" class="btn btn-brand d-inline-flex align-items-center">
            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" id="refreshSpinner"></span>
            <i class="bi bi-arrow-clockwise me-2" aria-hidden="true"></i>
            Refresh
          </button>
        </div>
      </div>

      <p class="last-updated mb-4">
        Last updated:
        <span id="lastUpdated"><%= new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %></span>
      </p>

      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="kv-label">ORDER ID</div>
          <div class="kv-value"><%= order.id %></div>

          <div class="kv-label">PRODUCT</div>
          <div class="kv-value"><%= order.productName %></div>

          <div class="kv-label">PRICE</div>
          <div class="kv-value">$<%= parseFloat(order.price).toFixed(2) %></div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="kv-label">DATE</div>
          <div class="kv-value"><%= new Date(order.purchaseDate).toLocaleString() %></div>

          <% if (order.order_details) { %>
            <div class="kv-label">DETAILS</div>
            <div class="kv-value"><%= order.order_details %></div>
          <% } %>

          <!-- DELIVERY (includes admin_reply) -->
          <div class="kv-label mt-3 d-flex align-items-center justify-content-between">
            <span>DELIVERY</span>
            <span class="small text-muted" id="deliveryStatusText"></span>
          </div>

          <div class="delivery-box mb-3">
            <div class="delivery-title">
              <h6>
                <i class="bi bi-key-fill"></i>
                Delivery Info
              </h6>

              <div class="d-flex gap-2 flex-wrap">
                <!-- Reveal only for real delivery secret -->
                <button id="revealDeliveryBtn" type="button" class="btn btn-outline-primary btn-sm btn-mini d-none">
                  <i class="bi bi-eye"></i> Reveal
                </button>

                <!-- Copy for both cases (secret after reveal OR admin reply text) -->
                <button id="copyDeliveryBtn" type="button" class="btn btn-outline-secondary btn-sm btn-mini d-none">
                  <i class="bi bi-clipboard"></i> Copy
                </button>
              </div>
            </div>

            <p class="delivery-preview user-select-all mb-2" id="deliveryPreview">
              <span class="hidden-note">Delivery will appear here once available.</span>
            </p>

            <div class="alert alert-warning mb-0 d-none" id="pendingManualBox" style="border-radius:12px;">
              <i class="bi bi-hourglass-split me-1"></i>
              Out of stock at purchase time — your order is pending and will be processed manually by admin.
            </div>
          </div>

          <% if (order.smm_status) { %>
            <div class="kv-label mt-3">SOCIAL MEDIA PROGRESS</div>
            <div class="kv-value">
              <%
                const orderedQty  = Number(order.smm_quantity || 0);
                const hasDelivered = order.smm_delivered_qty !== null && order.smm_delivered_qty !== undefined;
                const remainsDB   = Number(order.smm_remains_qty || 0);

                let deliveredQty, remainsQty;

                if (hasDelivered) {
                  deliveredQty = Number(order.smm_delivered_qty || 0);
                  remainsQty   = remainsDB || Math.max(0, orderedQty - deliveredQty);
                } else {
                  remainsQty   = remainsDB;
                  deliveredQty = Math.max(0, orderedQty - remainsQty);
                }

                if (deliveredQty < 0) deliveredQty = 0;
                if (deliveredQty > orderedQty) deliveredQty = orderedQty;
                if (remainsQty   < 0) remainsQty   = 0;
              %>

              <ul class="mb-0">
                <li><strong>Ordered quantity:</strong> <span class="text-dark" id="smm-ordered"><%= orderedQty %></span></li>
                <li><strong>Delivered quantity:</strong> <span class="text-dark" id="smm-delivered"><%= deliveredQty %></span></li>
                <li><strong>Not delivered (remaining):</strong> <span class="text-dark" id="smm-remains"><%= remainsQty %></span></li>
                <li>
                  <strong>Provider status:</strong>
                  <span class="text-dark" id="smm-provider-status"><%= (order.smm_provider_status || order.smm_status || '').toString() %></span>
                </li>
              </ul>
            </div>
          <% } %>

        </div>
      </div>

      <div class="mt-3">
        <a href="/my-orders" class="btn btn-ghost">
          <i class="bi bi-arrow-left me-2"></i> Back to Orders
        </a>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    (function () {
      const orderId = <%- JSON.stringify(order.id) %>;
      const $status = document.getElementById('order-status');
      const $last   = document.getElementById('lastUpdated');
      const $btn    = document.getElementById('refreshBtn');
      const $spin   = document.getElementById('refreshSpinner');

      // DELIVERY UI
      const $deliveryPreview = document.getElementById('deliveryPreview');
      const $revealDeliveryBtn = document.getElementById('revealDeliveryBtn');
      const $copyDeliveryBtn = document.getElementById('copyDeliveryBtn');
      const $pendingManualBox = document.getElementById('pendingManualBox');
      const $deliveryStatusText = document.getElementById('deliveryStatusText');

      // SMM
      const smmOrdered        = document.getElementById('smm-ordered');
      const smmDelivered      = document.getElementById('smm-delivered');
      const smmRemains        = document.getElementById('smm-remains');
      const smmProviderStatus = document.getElementById('smm-provider-status');

      let lastStatus = $status ? $status.textContent.trim() : '';

      // unified text to copy (either revealed secret OR admin reply)
      let copyText = '';
      let revealedDeliveryText = '';

      function setLoading(on){
        if(!$btn || !$spin) return;
        if(on){
          $spin.classList.remove('d-none');
          $btn.setAttribute('disabled','disabled');
        }else{
          $spin.classList.add('d-none');
          $btn.removeAttribute('disabled');
        }
      }

      function showTextInDeliveryBox(text, opts){
        const t = (text || '').toString().trim();
        const isEmpty = !t;

        if ($deliveryPreview) {
          if (isEmpty) {
            $deliveryPreview.innerHTML = `<span class="hidden-note">Delivery will appear here once available.</span>`;
          } else {
            $deliveryPreview.textContent = t;
          }
        }

        // copy enabled only if text exists
        if ($copyDeliveryBtn) {
          $copyDeliveryBtn.classList.toggle('d-none', isEmpty);
        }

        // Reveal button only when opts.allowReveal = true
        if ($revealDeliveryBtn) {
          $revealDeliveryBtn.classList.toggle('d-none', !opts?.allowReveal);
          if (opts?.allowReveal) {
            // default state hidden
            $revealDeliveryBtn.innerHTML = '<i class="bi bi-eye"></i> Reveal';
            $revealDeliveryBtn.dataset.state = 'hidden';
          } else {
            $revealDeliveryBtn.dataset.state = 'hidden';
          }
        }
      }

      function setDeliveryUI(delivery, adminReply){
        const hasDelivery = !!delivery?.has_delivery;
        const pendingManual = !!delivery?.pending_manual;
        const reply = (adminReply || '').toString().trim();

        $pendingManualBox?.classList.toggle('d-none', !pendingManual);

        if ($deliveryStatusText) {
          if (hasDelivery) $deliveryStatusText.textContent = 'Delivered';
          else if (reply) $deliveryStatusText.textContent = 'Delivered (manual)';
          else if (pendingManual) $deliveryStatusText.textContent = 'Pending manual';
          else $deliveryStatusText.textContent = 'Pending';
        }

        // 1) if real delivery exists -> show preview + enable reveal (copy only after reveal)
        if (hasDelivery) {
          revealedDeliveryText = '';
          copyText = ''; // will be set after reveal
          const prev = (delivery?.preview || 'Delivered').toString();
          showTextInDeliveryBox(prev, { allowReveal: true });
          // copy button should be hidden until reveal
          if ($copyDeliveryBtn) $copyDeliveryBtn.classList.add('d-none');
          return;
        }

        // 2) no delivery but admin reply exists -> show it directly and allow copy (no reveal)
        if (reply) {
          revealedDeliveryText = '';
          copyText = reply;
          showTextInDeliveryBox(reply, { allowReveal: false });
          return;
        }

        // 3) nothing yet
        revealedDeliveryText = '';
        copyText = '';
        showTextInDeliveryBox('', { allowReveal: false });
      }

      async function revealDelivery(){
        try{
          const res = await fetch(`/order-details/${orderId}/delivery.json`, { cache: 'no-store' });
          if(!res.ok) return;
          const data = await res.json();
          if(!data?.ok || !data?.delivery) return;

          revealedDeliveryText = String(data.delivery);
          copyText = revealedDeliveryText;

          if ($deliveryPreview) $deliveryPreview.textContent = revealedDeliveryText;
          if ($copyDeliveryBtn) $copyDeliveryBtn.classList.remove('d-none');

          if ($revealDeliveryBtn) {
            $revealDeliveryBtn.innerHTML = '<i class="bi bi-eye-slash"></i> Hide';
            $revealDeliveryBtn.dataset.state = 'revealed';
          }
        }catch(e){
          console.error('revealDelivery error:', e);
        }
      }

      function hideDelivery(){
        revealedDeliveryText = '';
        copyText = '';
        if ($copyDeliveryBtn) $copyDeliveryBtn.classList.add('d-none');
        if ($deliveryPreview) $deliveryPreview.innerHTML = `<span class="hidden-note">Hidden. Click Reveal to show again.</span>`;
        if ($revealDeliveryBtn) {
          $revealDeliveryBtn.innerHTML = '<i class="bi bi-eye"></i> Reveal';
          $revealDeliveryBtn.dataset.state = 'hidden';
        }
      }

      async function copyTextToClipboard(text){
        try {
          if (navigator.clipboard && window.isSecureContext) {
            await navigator.clipboard.writeText(text);
          } else {
            const ta = document.createElement('textarea');
            ta.value = text;
            ta.style.position = 'fixed';
            ta.style.left = '-9999px';
            document.body.appendChild(ta);
            ta.focus(); ta.select();
            document.execCommand('copy');
            ta.remove();
          }
          return true;
        } catch (e) {
          return false;
        }
      }

      async function fetchStatus() {
        try {
          setLoading(true);
          const res = await fetch(`/order-details/${orderId}/status.json`, { cache: 'no-store' });
          if (!res.ok) return;
          const data = await res.json();
          if (!data.ok) return;

          // status badge
          if (data.status && data.status !== lastStatus && $status) {
            lastStatus = data.status;
            $status.textContent = data.status;

            $status.className = 'badge';
            $status.style.backgroundColor = '';
            $status.style.color = '';

            if (data.status === 'Accepted') $status.classList.add('bg-success');
            else if (data.status === 'Rejected') $status.classList.add('bg-danger');
            else if (data.status === 'Partial') $status.classList.add('badge-partial');
            else if (data.status === 'In progress') $status.classList.add('bg-info','text-dark');
            else $status.classList.add('bg-warning','text-dark');
          }

          // SMM update
          if (data.smm) {
            if (smmOrdered)        smmOrdered.textContent        = data.smm.ordered;
            if (smmDelivered)      smmDelivered.textContent      = data.smm.delivered;
            if (smmRemains)        smmRemains.textContent        = data.smm.remains;
            if (smmProviderStatus) smmProviderStatus.textContent = data.smm.provider_status || '';
          }

          // ✅ unified delivery view: prefer delivery, else admin_reply, else pending
          setDeliveryUI(data.delivery || { has_delivery:false, pending_manual:false }, data.admin_reply || '');

          // time
          if ($last) {
            const now = new Date();
            $last.textContent = now.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
          }
        } catch (e) {
          console.error('order-details poll error:', e);
        } finally {
          setLoading(false);
        }
      }

      document.getElementById('refreshBtn')?.addEventListener('click', fetchStatus);

      $revealDeliveryBtn?.addEventListener('click', async () => {
        const state = ($revealDeliveryBtn.dataset.state || 'hidden');
        if (state === 'revealed') hideDelivery();
        else await revealDelivery();
      });

      $copyDeliveryBtn?.addEventListener('click', async () => {
        const t = (copyText || '').trim();
        if (!t) return;
        await copyTextToClipboard(t);
      });

      // init
      fetchStatus();
      setInterval(fetchStatus, 5000);
    })();
  </script>

</body>
</html>
