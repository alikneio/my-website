<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order Details - #<%= order.id %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/custom.css" />
  <link rel="stylesheet" href="/css/bootstrap-icons/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet"/>

  <style>
    :root{
      --brand: #1266F1;
      --bg-soft: #f4f6fa;
      --title: #1d3557;
      --text: #222;
      --muted: #6c757d;
      --purple: #a855f7;
    }
    body{
      background: var(--bg-soft);
      font-family: 'Cairo', sans-serif;
      color: var(--text);
    }
    .order-wrapper{
      background:#fff;
      border-radius:16px;
      padding:1.75rem;
      box-shadow:0 8px 26px rgba(0,0,0,.06)
    }
    .section-title{
      font-size:2rem;
      font-weight:800;
      color:var(--title);
      letter-spacing:.3px;
    }
    .kv-label{
      font-weight:700;
      color:#495057;
      margin-bottom:.35rem
    }
    .kv-value{
      background:#f1f3f5;
      border-radius:10px;
      padding:.75rem 1rem;
      color:#212529;
      margin-bottom:1rem
    }
    .badge{
      font-size:.95rem;
      padding:.45rem .9rem
    }
    .badge-partial{
      background: var(--purple);
      color:#fff;
    }
    .btn-brand{
      background:var(--brand);
      border-color:var(--brand);
      color:#fff
    }
    .btn-brand:hover{
      filter:brightness(.95);
      color:#fff
    }
    .btn-ghost{
      background:#fff;
      border:1px solid #e6e9ef;
      color:#222
    }
    .actions{ gap:.5rem }
    .last-updated{
      color:var(--muted);
      font-size:.9rem
    }

    /* Admin reply box */
    .reply-box{
      border:1px solid rgba(0,0,0,.08);
      border-radius: 14px;
      padding: 12px 14px;
      background: rgba(18,102,241,.04);
    }
    .reply-title{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:10px;
      margin-bottom: 8px;
    }
    .reply-title h6{
      margin:0;
      font-weight:800;
      color: var(--title);
      display:flex;
      align-items:center;
      gap:8px;
    }
    .reply-text{
      background:#f1f3f5;
      border-radius:10px;
      padding:.75rem 1rem;
      margin:0;
      white-space: pre-wrap;
      word-break: break-word;
    }
    .btn-mini{
      border-radius: 10px;
      display:inline-flex;
      align-items:center;
      gap:.4rem;
    }
    .hidden-note{
      color: var(--muted);
      font-size: .9rem;
    }

    /* Refill info */
    .refill-note{
      font-size: .9rem;
      color: var(--muted);
      margin-top: 6px;
    }

    @media (max-width: 768px){
      .section-title{ font-size:1.6rem }
      .order-wrapper{ padding:1.25rem }
    }
  </style>
</head>
<body>

  <%- include('partials/header') %>

  <main class="container my-5">
    <div class="order-wrapper">
      <div class="d-flex align-items-center justify-content-between flex-wrap mb-3">
        <h2 class="section-title mb-3 mb-md-0">Order Details</h2>

        <div class="d-flex align-items-center actions">
          <div id="status-badge" class="me-2">
            <% if (order.status === 'Accepted') { %>
              <span class="badge bg-success" id="order-status"><%= order.status %></span>
            <% } else if (order.status === 'Rejected') { %>
              <span class="badge bg-danger" id="order-status"><%= order.status %></span>
            <% } else if (order.status === 'Partial') { %>
              <span class="badge badge-partial" id="order-status">Partial</span>
            <% } else if (order.status === 'In progress') { %>
              <span class="badge bg-info text-dark" id="order-status">In progress</span>
            <% } else { %>
              <span class="badge bg-warning text-dark" id="order-status"><%= order.status %></span>
            <% } %>
          </div>

          <%
            // ========= Refill gating (FULL) =========

            // 1) SMM فقط
            const isSmmOrder = !!order.smm_status;

            // 2) لازم provider order id
            const hasProviderId = !!order.provider_order_id;

            // 3) منع NO REFILL من اسم المنتج (baseline)
            const noRefill = String(order.productName || '').toUpperCase().includes('NO REFILL');

            // 4) منطق إضافي لتفادي "REFILL 365D" الكاذب:
            // لا نعرض الزر إلا بعد اكتمال الطلب (completed) أو remains=0
            const providerStatus = String(order.smm_provider_status || order.smm_status || '').toLowerCase();
            const remainsNum = Number(order.smm_remains_qty || 0);
            const deliveredNum = (order.smm_delivered_qty === null || order.smm_delivered_qty === undefined)
              ? null
              : Number(order.smm_delivered_qty || 0);

            const isCompletedLike =
              providerStatus.includes('completed') ||
              remainsNum === 0;

            // 5) (اختياري) إذا السيرفر حاطط flag إنو refill ممنوع لهذا الطلب
            const refillDisabled = Number(order.refill_disabled || 0) === 1;

            const canShowRefill =
              isSmmOrder &&
              hasProviderId &&
              !noRefill &&
              !refillDisabled &&
              isCompletedLike;

            // قفل 5 أيام (backend يمرر refill_next_at)
            const refillNextAtRaw = order.refill_next_at || null;
          %>

          <% if (canShowRefill) { %>
            <div class="d-flex flex-column align-items-end">
              <button id="refillBtn" class="btn btn-outline-primary d-inline-flex align-items-center">
                <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" id="refillSpinner"></span>
                <i class="bi bi-life-preserver me-2" aria-hidden="true"></i>
                Refill
              </button>
              <div class="refill-note d-none" id="refillNote"></div>
            </div>
          <% } %>

          <button id="refreshBtn" class="btn btn-brand d-inline-flex align-items-center">
            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" id="refreshSpinner"></span>
            <i class="bi bi-arrow-clockwise me-2" aria-hidden="true"></i>
            Refresh
          </button>
        </div>
      </div>

      <p class="last-updated mb-4">
        Last updated:
        <span id="lastUpdated"><%= new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %></span>
      </p>

      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="kv-label">ORDER ID</div>
          <div class="kv-value"><%= order.id %></div>

          <div class="kv-label">PRODUCT</div>
          <div class="kv-value"><%= order.productName %></div>

          <div class="kv-label">PRICE</div>
          <div class="kv-value">$<%= parseFloat(order.price).toFixed(2) %></div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="kv-label">DATE</div>
          <div class="kv-value"><%= new Date(order.purchaseDate).toLocaleString() %></div>

          <% if (order.order_details) { %>
            <div class="kv-label">DETAILS</div>
            <div class="kv-value"><%= order.order_details %></div>
          <% } %>

          <!-- ✅ ADMIN REPLY ONLY -->
          <div class="kv-label mt-3 d-flex align-items-center justify-content-between">
            <span>ADMIN REPLY</span>
          </div>

          <div class="reply-box mb-3">
            <div class="reply-title">
              <h6>
                <i class="bi bi-chat-left-text-fill"></i>
                Admin Reply
              </h6>

              <button id="copyReplyBtn" type="button" class="btn btn-outline-secondary btn-sm btn-mini d-none">
                <i class="bi bi-clipboard"></i> Copy
              </button>
            </div>

            <pre class="reply-text user-select-all mb-0" id="adminReplyBox"><%= (order.admin_reply || '').toString() %></pre>
            <div class="hidden-note mt-2 d-none" id="noReplyNote">No admin reply yet.</div>
          </div>

          <!-- ✅ SMM -->
          <% if (order.smm_status) { %>
            <div class="kv-label mt-3">SOCIAL MEDIA PROGRESS</div>
            <div class="kv-value">
              <%
                const orderedQty  = Number(order.smm_quantity || 0);
                const hasDelivered = order.smm_delivered_qty !== null && order.smm_delivered_qty !== undefined;
                const remainsDB   = Number(order.smm_remains_qty || 0);

                let deliveredQty, remainsQty;

                if (hasDelivered) {
                  deliveredQty = Number(order.smm_delivered_qty || 0);
                  remainsQty   = remainsDB || Math.max(0, orderedQty - deliveredQty);
                } else {
                  remainsQty   = remainsDB;
                  deliveredQty = Math.max(0, orderedQty - remainsQty);
                }

                if (deliveredQty < 0) deliveredQty = 0;
                if (deliveredQty > orderedQty) deliveredQty = orderedQty;
                if (remainsQty   < 0) remainsQty   = 0;
              %>

              <ul class="mb-0">
                <li><strong>Ordered quantity:</strong> <span class="text-dark" id="smm-ordered"><%= orderedQty %></span></li>
                <li><strong>Delivered quantity:</strong> <span class="text-dark" id="smm-delivered"><%= deliveredQty %></span></li>
                <li><strong>Not delivered (remaining):</strong> <span class="text-dark" id="smm-remains"><%= remainsQty %></span></li>
                <li>
                  <strong>Provider status:</strong>
                  <span class="text-dark" id="smm-provider-status"><%= (order.smm_provider_status || order.smm_status || '').toString() %></span>
                </li>
              </ul>
            </div>
          <% } %>

        </div>
      </div>

      <div class="mt-3">
        <a href="/my-orders" class="btn btn-ghost">
          <i class="bi bi-arrow-left me-2"></i> Back to Orders
        </a>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    (function () {
      const orderId = <%- JSON.stringify(order.id) %>;

      const $status = document.getElementById('order-status');
      const $last   = document.getElementById('lastUpdated');
      const $btn    = document.getElementById('refreshBtn');
      const $spin   = document.getElementById('refreshSpinner');

      // ✅ Refill UI
      const $refillBtn  = document.getElementById('refillBtn');
      const $refillSpin = document.getElementById('refillSpinner');
      const $refillNote = document.getElementById('refillNote');

      // refill lock time from server
      const refillNextAtRaw = <%- JSON.stringify(order.refill_next_at || null) %>;

      // Admin reply UI
      const $adminReplyBox = document.getElementById('adminReplyBox');
      const $copyReplyBtn  = document.getElementById('copyReplyBtn');
      const $noReplyNote   = document.getElementById('noReplyNote');

      // SMM
      const smmOrdered        = document.getElementById('smm-ordered');
      const smmDelivered      = document.getElementById('smm-delivered');
      const smmRemains        = document.getElementById('smm-remains');
      const smmProviderStatus = document.getElementById('smm-provider-status');

      let lastStatus = $status ? $status.textContent.trim() : '';
      let lastReply  = ($adminReplyBox?.textContent || '').trim();

      function setLoading(on){
        if(!$btn || !$spin) return;
        if(on){
          $spin.classList.remove('d-none');
          $btn.setAttribute('disabled','disabled');
        }else{
          $spin.classList.add('d-none');
          $btn.removeAttribute('disabled');
        }
      }

      function setRefillLoading(on){
        if(!$refillBtn || !$refillSpin) return;
        if(on){
          $refillSpin.classList.remove('d-none');
          $refillBtn.setAttribute('disabled','disabled');
        }else{
          $refillSpin.classList.add('d-none');
          // ملاحظة: ما نرجع نفتح الزر هون إذا عليه lock
          // applyRefillLock رح يقرر
          $refillBtn.removeAttribute('disabled');
        }
      }

      function setReplyUI(text){
        const t = (text || '').toString().trim();
        if ($adminReplyBox) $adminReplyBox.textContent = t;

        const has = !!t;
        if ($copyReplyBtn) $copyReplyBtn.classList.toggle('d-none', !has);
        if ($noReplyNote)  $noReplyNote.classList.toggle('d-none', has);
      }

      function formatRemaining(ms){
        const totalSeconds = Math.max(0, Math.floor(ms / 1000));
        const days = Math.floor(totalSeconds / 86400);
        const hours = Math.floor((totalSeconds % 86400) / 3600);
        const mins = Math.floor((totalSeconds % 3600) / 60);

        if (days > 0) return `${days}d ${hours}h`;
        if (hours > 0) return `${hours}h ${mins}m`;
        return `${mins}m`;
      }

      function applyRefillLock(nextAt){
        if(!$refillBtn) return;

        if (!nextAt) {
          $refillBtn.removeAttribute('disabled');
          if ($refillNote) $refillNote.classList.add('d-none');
          return;
        }

        const t = new Date(nextAt).getTime();
        if (!t || Number.isNaN(t)) {
          $refillBtn.removeAttribute('disabled');
          if ($refillNote) $refillNote.classList.add('d-none');
          return;
        }

        const now = Date.now();
        if (now >= t) {
          $refillBtn.removeAttribute('disabled');
          if ($refillNote) $refillNote.classList.add('d-none');
          return;
        }

        $refillBtn.setAttribute('disabled','disabled');
        const remaining = formatRemaining(t - now);

        if ($refillNote) {
          $refillNote.textContent = `Refill available in ${remaining}`;
          $refillNote.classList.remove('d-none');
        }
      }

      async function copyTextToClipboard(text){
        try {
          if (navigator.clipboard && window.isSecureContext) {
            await navigator.clipboard.writeText(text);
          } else {
            const ta = document.createElement('textarea');
            ta.value = text;
            ta.style.position = 'fixed';
            ta.style.left = '-9999px';
            document.body.appendChild(ta);
            ta.focus(); ta.select();
            document.execCommand('copy');
            ta.remove();
          }
          return true;
        } catch (e) {
          return false;
        }
      }

      async function fetchStatus() {
        try {
          setLoading(true);
          const res = await fetch(`/order-details/${orderId}/status.json`, { cache: 'no-store' });
          if (!res.ok) return;
          const data = await res.json();
          if (!data.ok) return;

          if (data.status && data.status !== lastStatus && $status) {
            lastStatus = data.status;
            $status.textContent = data.status;

            $status.className = 'badge';
            $status.style.backgroundColor = '';
            $status.style.color = '';

            if (data.status === 'Accepted') $status.classList.add('bg-success');
            else if (data.status === 'Rejected') $status.classList.add('bg-danger');
            else if (data.status === 'Partial') $status.classList.add('badge-partial');
            else if (data.status === 'In progress') $status.classList.add('bg-info','text-dark');
            else $status.classList.add('bg-warning','text-dark');
          }

          const reply = (data.admin_reply || '').toString().trim();
          if (reply !== lastReply) {
            lastReply = reply;
            setReplyUI(reply);
          }

          if (data.smm) {
            if (smmOrdered)        smmOrdered.textContent        = data.smm.ordered;
            if (smmDelivered)      smmDelivered.textContent      = data.smm.delivered;
            if (smmRemains)        smmRemains.textContent        = data.smm.remains;
            if (smmProviderStatus) smmProviderStatus.textContent = data.smm.provider_status || '';
          }

          if ($last) {
            const now = new Date();
            $last.textContent = now.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
          }

        } catch (e) {
          console.error('order-details poll error:', e);
        } finally {
          setLoading(false);
        }
      }

      async function requestRefill(){
        if(!$refillBtn) return;
        // إذا الزر disabled بسبب lock ما نعمل شي
        if ($refillBtn.hasAttribute('disabled')) return;

        try{
          setRefillLoading(true);

          const res = await fetch(`/order-details/${orderId}/refill.json`, {
            method: 'POST',
            cache: 'no-store'
          });

          const data = await res.json().catch(()=> ({}));

          if(!res.ok || !data.ok){
            const msg = data.message || 'Refill failed';
            setReplyUI(`❌ ${msg}`);
            lastReply = (`❌ ${msg}`).trim();

            // إذا السيرفر رجّع refill_next_at (429) طبّق lock مباشرة
            if (data.refill_next_at) applyRefillLock(data.refill_next_at);

            return;
          }

          setReplyUI(`✅ Refill requested successfully`);
          lastReply = '✅ Refill requested successfully';

          if (data.refill_next_at) applyRefillLock(data.refill_next_at);
          else applyRefillLock(Date.now() + (5 * 24 * 60 * 60 * 1000));

          fetchStatus();
        }catch(e){
          setReplyUI(`❌ Refill error: ${e.message}`);
          lastReply = (`❌ Refill error: ${e.message}`).trim();
        }finally{
          setRefillLoading(false);
          // بعد التحميل رجّع قرار القفل الحقيقي
          applyRefillLock(refillNextAtRaw);
        }
      }

      document.getElementById('refreshBtn')?.addEventListener('click', fetchStatus);
      $refillBtn?.addEventListener('click', requestRefill);

      $copyReplyBtn?.addEventListener('click', async () => {
        const t = ($adminReplyBox?.textContent || '').trim();
        if (!t) return;
        await copyTextToClipboard(t);
      });

      setReplyUI(($adminReplyBox?.textContent || '').trim());
      applyRefillLock(refillNextAtRaw);
      fetchStatus();
      setInterval(fetchStatus, 5000);
    })();
  </script>

</body>
</html>
