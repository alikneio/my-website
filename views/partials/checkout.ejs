<!DOCTYPE html>
<html lang="en">
<head>
</head>

<body class="bg-dark text-white">
 
  
  <!-- زر القائمة -->
  <a class="btn btn-dark m-3" data-bs-toggle="offcanvas" href="#offcanvasMenu" role="button" aria-controls="offcanvasMenu">
    <i class="bi bi-list"></i> Menu
  </a>

  <!-- القائمة الجانبية -->
  <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
    <div class="offcanvas-header border-bottom border-secondary">
      <h5 class="offcanvas-title" id="offcanvasMenuLabel">AK Cell Menu</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <a href="/" class="btn btn-outline-light w-100 mb-2"><i class="bi bi-house"></i> Home</a>
      <a href="/my-orders" class="btn btn-outline-light w-100 mb-2"><i class="bi bi-bag"></i> My Orders</a>
      <a href="/logout" class="btn btn-outline-danger w-100"><i class="bi bi-box-arrow-right"></i> Logout</a>
    </div>
  </div>

  <!-- تفاصيل الطلب -->
  <div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-receipt-cutoff"></i> Order Details</h2>

    <div class="card bg-secondary text-white shadow p-4">
      
      <div class="mb-3">
        <strong>STATUS:</strong>
        <% if (order.status === 'Accepted') { %>
          <span class="badge bg-success">Accepted</span>
        <% } else if (order.status === 'Rejected') { %>
          <span class="badge bg-danger">Rejected</span>
        <% } else { %>
          <span class="badge bg-warning text-dark">Waiting</span>
        <% } %>
      </div>

      <div class="mb-3"><strong>ORDER ID:</strong> <%= order.id %></div>
      <div class="mb-3"><strong>PRODUCT:</strong> <%= order.product_name %></div>
      <div class="mb-3"><strong>PRICE:</strong> $<%= parseFloat(order.price).toFixed(2) %></div>
      <div class="mb-3"><strong>DATE:</strong> <%= order.created_at.toLocaleString() %></div>

      <% if (order.player_id) { %>
        <div class="mb-3"><strong>PLAYER ID:</strong> <%= order.player_id %></div>
      <% } %>

      <% if (order.admin_reply) { %>
        <div class="mb-3"><strong>Admin Reply:</strong> <%= order.admin_reply %></div>
      <% } %>

      <a href="/my-orders" class="btn btn-outline-light mt-3">
        <i class="bi bi-arrow-left"></i> Back to Orders
      </a>
    </div>
  </div>

  

</body>
</html>