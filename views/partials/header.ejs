<!-- ======= SIDE MENU ONLY (NO NAVBAR) ======= -->

<style>
  /* زر القائمة */
  .ak-menu-button {
    position: fixed;
    top: 20px;
    left: 20px;
    background: #0ea5e9;
    color: #fff;
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.6rem;
    z-index: 2000;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(14,165,233,0.4);
    transition: 0.2s ease;
  }
  .ak-menu-button:hover {
    background: #38bdf8;
    transform: translateY(-2px);
  }

  /* OFFCANVAS STYLE */
  .ak-menu-offcanvas {
    background: radial-gradient(circle at top left, #111827, #020617);
    color: #f9fafb;
    width: 300px;
  }
  .ak-menu-offcanvas .offcanvas-header {
    background: linear-gradient(90deg, #0f172a, #1e293b);
  }
  .ak-menu-offcanvas .offcanvas-title {
    font-weight: 700;
    font-size: 1.2rem;
  }

  .ak-user-card {
    border-radius: 16px;
    background: rgba(15, 23, 42, 0.92);
    border: 1px solid rgba(148, 163, 184, 0.4);
    padding: 14px;
  }

  .ak-user-meta {
    font-size: 0.82rem;
    opacity: 0.9;
  }

  .ak-pill {
    border-radius: 999px;
    padding: 3px 10px;
    font-size: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }
  .ak-pill-level { background: #facc15; color: #1f2937; font-weight: 600; }
  .ak-pill-discount { background: #22c55e; color: #042f2e; font-weight: 600; }

  .ak-menu-link {
    border-radius: 10px;
    padding: 7px 10px;
    margin-bottom: 4px;
    font-size: 0.95rem;
  }
  .ak-menu-link i { width: 18px; }
  .ak-menu-link:hover {
    background: rgba(255,255,255,0.08);
  }
</style>

<!-- زر القائمة -->
<button class="ak-menu-button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasMenu">
    <i class="bi bi-list"></i>
</button>

<!-- OFFCANVAS MENU -->
<div class="offcanvas offcanvas-start ak-menu-offcanvas"
     tabindex="-1"
     id="offcanvasMenu">

  <div class="offcanvas-header">
    <h5 class="offcanvas-title">
      <i class="bi bi-grid-3x3-gap me-2"></i> Menu
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
  </div>

  <div class="offcanvas-body">

    <!-- Notifications -->
    <div class="d-flex justify-content-end mb-2">
      <a href="/notifications" class="btn btn-outline-light btn-sm position-relative">
        <i class="bi bi-bell"></i>
        <span id="notifBadge"
              class="position-absolute top-0 start-100 translate-middle badge bg-danger rounded-pill"
              style="display:none;">0</span>
      </a>
    </div>

    <% if (user) { %>

      <div class="ak-user-card mb-3">
        <h6 class="mb-1">Welcome, <%= user.username %></h6>
        <div class="ak-user-meta mb-1">
          Balance:
          <span class="text-success fw-bold">$<%= Number(user.balance || 0).toFixed(2) %></span>
        </div>

        <div class="d-flex gap-2 mt-2 flex-wrap">
          <span class="ak-pill ak-pill-level">Level <%= user.level %></span>
          <span class="ak-pill ak-pill-discount">Discount <%= user.discount_percent %>%</span>
        </div>

        <div class="text-muted small mt-2">
          Total spent: $<%= Number(user.total_spent || 0).toFixed(2) %>
        </div>
      </div>

      <div class="mb-3">
        <a class="nav-link text-white ak-menu-link" href="/profile">
          <i class="bi bi-person"></i> My Profile
        </a>
        <a class="nav-link text-white ak-menu-link" href="/add-balance/whish">
          <i class="bi bi-credit-card"></i> Add Balance
        </a>
        <a class="nav-link text-white ak-menu-link" href="/">
          <i class="bi bi-house"></i> Home
        </a>
        <a class="nav-link text-white ak-menu-link" href="/my-orders">
          <i class="bi bi-bag"></i> My Orders
        </a>
        <a class="nav-link text-white ak-menu-link" href="/transactions">
          <i class="bi bi-cash"></i> Transactions
        </a>
      </div>

      <% if (user.role === 'admin') { %>
        <a class="btn btn-warning w-100 mb-2" href="/admin">
          <i class="bi bi-person-gear"></i> Admin Panel
        </a>
      <% } %>

      <a class="btn btn-outline-danger w-100" href="/logout">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>

    <% } else { %>

      <a class="nav-link text-white ak-menu-link" href="/login">
        <i class="bi bi-box-arrow-in-right"></i> Login
      </a>
      <a class="nav-link text-white ak-menu-link" href="/register">
        <i class="bi bi-person-plus"></i> Register
      </a>

    <% } %>

  </div>
</div>
